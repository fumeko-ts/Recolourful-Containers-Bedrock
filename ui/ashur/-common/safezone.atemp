{
  "namespace": "safezone",

  "safezone_buffer@global.empty_panel": {
    "bindings": [
      {
        "binding_name": "$safezone_binding_name",
        "binding_name_override": "#visible"
      }
    ]
  },

  "top_safezone_vertical_buffer@safezone.safezone_buffer": {
    "size": "$top_vertical_safezone_size"
  },

  "bottom_safezone_vertical_buffer@safezone.safezone_buffer": {
    "size": "$bottom_vertical_safezone_size"
  },

  "left_safezone_horizontal_buffer@safezone.safezone_buffer": {
    "size": "$left_horizontal_safezone_size"
  },

  "right_safezone_horizontal_buffer@safezone.safezone_buffer": {
    "size": "$right_horizontal_safezone_size"
  },
  "screen_holder_safezone@global.empty_stack": {
    "orientation": "horizontal",
    "$screen_content_control_name|default": "('§r§e [' + $screen_content + '§r§e] §4§lis_invalid§r')",// used for clarity in the error logs
    "size": ["100%", "100%"],
    "controls": [
      {
        "outer_left@safezone.left_safezone_horizontal_buffer": {
          "$safezone_binding_name": "#safezone_outer_left"
        }
      },
      {
        "inner_left@safezone.left_safezone_horizontal_buffer": {
          "$safezone_binding_name": "#safezone_inner_left",
          "anchor_from": "top_left",
          "anchor_to": "top_left"
        }
      },
      {
        "safezone_inner_matrix": {
          "type": "stack_panel",
          "size": ["fill", "100%"],
          "orientation": "vertical",
          "controls": [
            {
              "outer_top@safezone.top_safezone_vertical_buffer": {
                "$safezone_binding_name": "#safezone_outer_top"
              }
            },
            {
              "inner_top@safezone.top_safezone_vertical_buffer": {
                "$safezone_binding_name": "#safezone_inner_top"
              }
            },
            {
              "container_content@global.empty_panel": {
                "size": ["100%", "fill"],
                "controls": [
                  { "$screen_content_control_name@$screen_content": {} },
                  {
                    "bundle_tooltip_wrapper@global.empty_panel": {
                      "size": ["100%", "100%"],
                      "controls": [
                        {
                          "bundle_cursor_tooltip@global.custom_renderer": {
                            "$type": "bundle_tooltip_renderer",
                            "size": ["100%c", "100%c - 26px"],
                            "layer": 20,
                            "controls": [
                              {
                                "tooltip@bundle.bundle_tooltip": {
                                  "bindings": [
                                    {
                                      "binding_name": "#show_bundle_tooltip_hover",
                                      "binding_name_override": "#visible",
                                      "binding_condition": "always"
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        },
                        {
                          "bundle_touch_tooltip@bundle.bundle_tooltip": {
                            "offset": [0, "-36px"],
                            "anchor_from": "bottom_middle",
                            "anchor_to": "bottom_middle",
                            "bindings": [
                              { "binding_name": "#show_bundle_tooltip_pocket", "binding_name_override": "#visible" }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "inner_bottom@safezone.bottom_safezone_vertical_buffer": {
                "$safezone_binding_name": "#safezone_inner_bottom"
              }
            },
            {
              "outer_bottom@safezone.bottom_safezone_vertical_buffer": {
                "$safezone_binding_name": "#safezone_outer_bottom"
              }
            }
          ]
        }
      },
      {
        "inner_right@safezone.right_safezone_horizontal_buffer": {
          "$safezone_binding_name": "#safezone_inner_right"
        }
      },
      {
        "outer_right@safezone.right_safezone_horizontal_buffer": {
          "$safezone_binding_name": "#safezone_outer_right"
        }
      }
    ]
  }
}
