{
  "namespace": "tradeing_screen",
  "screen_panel@container_common.container_details": {
    "size": [276, 166],    

    "$screen_controls": [
      {"villager_distinguisher@villager_distinguisher.villager_panel":{}},
      {"trade_scroll@tradeing_screen.scroll_panel": {}},
      {
        "trade_main_inventory_half@global.empty_stack": {
          "orientation": "horizontal",
          "size": [141, 55],
          "anchor_to": "top_right",
          "anchor_from": "top_right",
          "controls": [
            {
              "vertical_1@global.empty_stack": {
                "orientation": "vertical",
                "size": [18, 55],
                "controls": [
                  {
                    "filler_1@global.empty_panel": {
                      "size": ["fill", 36]
                    }
                  },
                  {
                    "input_1@global.container_item": {
                      "$item_collection": "trade2_ingredient1_item"
                    }
                  },
                  {
                    "filler_2@global.empty_panel": {
                      "size": ["fill", 1]
                    }
                  }
                ]
              }
            },
            {
              "filler_2@global.empty_panel": { "size": [8, "fill"] }
            },
            {
              "vertical_2@global.empty_stack": {
                "orientation": "vertical",
                "size": [18, 55],
                "controls": [
                  {
                    "filler_1@global.empty_panel": {
                      "size": ["fill", 36]
                    }
                  },
                  {
                    "input_1@global.container_item": {
                      "$item_collection": "trade2_ingredient2_item"
                    }
                  },
                  {
                    "filler_2@global.empty_panel": {
                      "size": ["fill", 1]
                    }
                  }
                ]
              }
            },
            {
              "filler_3@global.empty_panel": { "size": [40, "fill"] }
            },
            {
              "vertical_3@global.empty_stack": {
                "orientation": "vertical",
                "size": [18, 55],
                "controls": [
                  {
                    "filler_1@global.empty_panel": {
                      "size": ["fill", 37]
                    }
                  },
                  {
                    "input_1@global.container_item": {
                      "$background_images": "tradeing_screen.trade_arrow_deny",
                      "$item_collection": "trade2_result_item",
                      "$button_ref": "button_mappings.trade_result_item_slot_button"
                    }
                  }
                ]
              }
            },
            {
              "filler_4@global.empty_panel": { "size": [39, "fill"] }
            }
          ]
        }
      },
      {
        "exp_progress_bar@global.empty_stack": {
          "orientation": "horizontal",
          "size": [276, 21],
          "layer": 10,
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "controls": [
            {
              "label_holder@global.empty_panel": {
                "size": [101, 21],
                "controls": [
                  {
                    "label@global.empty_label": {
                      "text": "atemp.merchant.trades",
                      "size": ["default", 10],
                      "color": "$title_text_color",
                      "layer": 14,
                      "anchor_to": "top_middle",
                      "anchor_from": "top_middle",
                      "offset": [2, 5]
                    }
                  }
                ]
              }
            },
            {
              "filler_1@global.empty_panel": { "size": [35, "fill"] }
            },
            {
              "exp_and_profession_stack@global.empty_stack": {
                "orientation": "vertical",
                "size": [102, 21],
                "controls": [
                  {
                    "profession_holder@global.empty_panel": {
                      "size": [102, 16],
                      "controls": [
                        {"filler@global.empty_label": {"size": ["default", 10]}}
                      ]
                    }
                  },
                  {
                    "exp_holder@global.empty_panel": {
                      "size": [102, 5],
                      "controls": [
                        {
                          "empty_progress_bar@screen_content.image_element": {
                            "size": [102, 5],
                            "anchor_to": "center",
                            "anchor_from": "center",
                            "texture": "assets/minecraft/textures/gui/sprites/container/villager/experience_bar_background.png",
                            "layer": 7,
                            "controls": [
                              {
                                "white_progress_bar@screen_content.image_element": {
                                  "size": [102, 5],
                                  "anchor_to": "center",
                                  "anchor_from": "center",
                                  "texture": "assets/minecraft/textures/gui/sprites/container/villager/experience_bar_current.png",
                                  "clip_direction": "left",
                                  "clip_pixelperfect": true,
                                  "layer": 8,
                                  "bindings": [
                                    {
                                      "binding_name": "#exp_possible_progress",
                                      "binding_name_override": "#clip_ratio",
                                      "binding_type": "global",
                                      "binding_condition": "always"
                                    }
                                  ]
                                }
                              }
                            ],
                            "bindings": [
                              {
                                "binding_name": "#exp_bar_visible",
                                "binding_name_override": "#visible"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "filler_2@global.empty_panel": { "size": [38, "fill"] }
            }
          ]
        }
      },
      {
        "bottom@crafting_screen.inventory_bottom_half_with_label": {
          "offset": [-7, 0],
          "anchor_to": "bottom_right",
          "anchor_from": "bottom_right"
        }
      },
      {
        "mount_screen_bindings@common.text_edit_box": {
          "size": ["100%", 28],
          "max_length": 99,
          "$text_edit_text_control": "text_control",
          "$text_alignment": "center",
          "controls": [
            {
              "text_control": {
                "type": "label",
                "layer": 9,
                "text": "#item_name",
                "visible": true,
                "property_bag": {"#property_field": "#item_name"},
                "localize": false,
                "bindings": [
                  {
                    "binding_type"        : "view",
                    "source_control_name" : "display_text",
                    "source_property_name": "#item_name",
                    "target_property_name": "#current_input_text"
                  },
                  {"binding_name": "#name_label", "binding_condition": "always"},
                  {
                    "binding_type": "view",
                    "binding_condition": "always",
                    "source_property_name": "(#current_input_text + ('ui:' + ('%.1s' * #name_label)))",
                    "target_property_name": "#item_name"
                  }
                ]
              }
            }
          ],
          "anchor_from": "center",
          "anchor_to": "center",
          "$place_holder_text": "Input here.."
        }
      }
    ]
  },
  "trade_tier_base": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": ["100%", "default"],
    "factory": {
      "name"        : "selected_pack_factory",
      "control_name": "tradeing_screen.trade_toggle"
    },
    "$trade_collection_name": "trades",
    "collection_name": "$trade_collection_name",
    "bindings": [
      {
        "binding_name"           : "#trade_tier_total",
        "binding_name_override"  : "#collection_length",
        "binding_type"           : "collection",
        "binding_collection_name": "trade_tiers"
      },
      {
        "binding_name"           : "#tier_visible",
        "binding_name_override"  : "#visible",
        "binding_type"           : "collection",
        "binding_collection_name": "trade_tiers",
        "binding_condition"      : "always"
      }
    ]
  },
  "trade_toggle@common_toggles.light_image_toggle_collection": {
    "size": [88, 20],
    "$toggle_name": "trade_toggle",
    "$template_toggle": "trade_global.trade_toggle",
    "$toggle_binding_type": "global",
    "$toggle_state_binding_name": "#trade_toggle_state",
    "$toggle_enabled_binding_type": "global",
    "$toggle_enabled_binding_name": "#trade_toggle_enabled",
    "$toggle_enabled_binding_condition": "always_when_visible"
  },
  "scroll_panel@scroll_panel.new_scrolling_panel": {
    "size": [120, 142],
    "offset": [-4.8, 5],
    "$scroll_viewport_offset": [0, 0.2],
    "$bar_and_track_offset|default": [-13, -40.4],
    "layer": 6,
    "anchor_to": "left_middle",
    "anchor_from": "left_middle",
    "$scroll_box_mouse_image_control": "screen_content.trade_scroller",
    "$scrolling_content": "tradeing_screen.grid_holder"
  },
  "grid_holder": {
    "type": "panel",
    "size": [88, "100%cm"],
    "anchor_to": "center",
    "anchor_from": "center",
    "offset": [-1, -1.2],
    "controls": [
      {
        "trade_buttons@common.root_panel": {
          "size": [88, "100%c"],
          "controls": [
            {
              "trade_selector_stack_panel": {
                "type": "stack_panel",
                "orientation": "vertical",
                "size": ["100%", "default"],
                "factory": {
                  "name"        : "selected_pack_factory",
                  "control_name": "tradeing_screen.trade_tier_base"
                },
                "collection_name": "trade_tiers",
                "bindings": [
                  {
                    "binding_name"         : "#trade_selector_total",
                    "binding_name_override": "#collection_length"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "trade_arrow_deny@global.empty_image": {
    "offset": [-37, -0.2],
    "size": [28, 21],
    "keep_ratio": true,
    "texture": "assets/minecraft/textures/gui/sprites/container/villager/out_of_stock.png",
    "layer": 4,
    "anchor_to": "left_middle",
    "anchor_from": "left_middle",
    "bindings": [
      {
        "binding_name"           : "(not #item_valid)",
        "binding_name_override"  : "#visible",
        "binding_type"           : "collection",
        "binding_collection_name": "$item_collection",
        "binding_condition"      : "always"
      }
    ]
  }
}
