{
  "namespace": "stonecutter_screen",
  "stonecutter_panel@container_common.container_details": {
    "size": [176, 166],
    "$screen_controls": [
      {
        "sawblade@screen_content.image_element": {
          "texture": "optifine/anim/sawblade.png",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": [168, 67],
          "layer": 2,
          "uv_size": [168, 67],
          "uv": "@sawblade.sawblade_0",
          "disable_anim_fast_forward": true
        }
      },
      { "common_panel@screen_content.container_base": {"$stonecutter_screen": true} },
      {
        "stonecutter_top_half@global.empty_stack": {
          "orientation": "vertical",
          "size": [176, 69],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "controls": [
            {
              "filler_1@global.empty_panel": { "size": ["fill", 5] }
            },
            {
              "smithing_label@global.empty_panel": { "size": ["fill", 10] }
            },
            {
              "container_main@global.empty_stack": {
                "orientation": "horizontal",
                "size": [176, 54],
                "controls": [
                  {
                    "filler_1@global.empty_panel": { "size": [19, "fill"] }
                  },
                  {
                    "input@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [18, 54],
                      "controls": [
                        {
                          "filler_1@global.empty_panel": { "size": ["fill", 17] }
                        },
                        { "input_item_slot@global.container_item": {"$item_collection": "stonecutter_input_items"} },
                        {
                          "filler_1@global.empty_panel": { "size": ["fill", 19] }
                        }
                      ]
                    }
                  },
                  {
                    "filler_2@global.empty_panel": { "size": [14, "fill"] }
                  },
                  {
                    "scroll_panel@scroll_panel.common_container_scrolling_panel": {
                      "size": [80, 54],
                      "$scroll_size": [12, 75],
                      "$scrolling_pane_offset": [0, 0],
                      "$scroll_view_port_size": [79, 54.2],
                      "$misc_scroller_offset": [0, -1],
                      "$scroll_track_offset": [0, -0.2],
                      "$scrolling_pane_size": ["100%", "100%"],
                      "$scroll_box_mouse_image_control": "screen_content.cutter_scroll_box_image",
                      "$scroll_box_touch_image_control": "screen_content.cutter_scroll_box_image",
                      "$scrolling_content": "stonecutter_screen.grid_holder"
                    }
                  },
                  {
                    "filler_3@global.empty_panel": { "size": [11, "fill"] }
                  },
                  {
                    "output_stack@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [18, 54],
                      "controls": [
                        {
                          "filler_1@global.empty_panel": { "size": ["fill", 17] }
                        },
                        {
                          "result_item_slot@global.container_item": {
                            "$item_collection": "stonecutter_result_items",
                            "$button_ref"     : "button_mappings.stonecutter_result_slot_button"
                          }
                        },
                        {
                          "filler_1@global.empty_panel": { "size": ["fill", 19] }
                        }
                      ]
                    }
                  },
                  {
                    "filler_4@global.empty_panel": { "size": [16, "fill"] }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "locked_scroll_holder@global.empty_panel": {
          "anchor_to": "top_right",
          "anchor_from": "top_right",
          "size": [57, 30],
          "controls": [
            {
              "locked_scroll_box@global.empty_panel": {
                "size": [12, 15],
                "anchor_to": "bottom_left",
                "anchor_from": "bottom_left",
                "controls": [
                  {
                    "locked_scroll_box@screen_content.cutter_scroll_box_image_disabled": {
                      "bindings": [
                        {
                          "binding_name"           : "(#stone_selector_total_items < 13)",
                          "binding_name_override"  : "#visible",
                          "binding_type"           : "collection",
                          "binding_collection_name": "stones"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "bottom@crafting_screen.inventory_bottom_half_with_label": {
          "anchor_to"  : "bottom_middle",
          "anchor_from": "bottom_middle"
        }
      }
    ]
  },
  "button_sprite_template@screen_content.image_element": {
    "size": ["100%", "100%"],
    "nineslice_size": 2,
    "texture": "$sprite",
    "fill": true,
    "layer": 4,
    "offset": [1, 1],
    "clip_pixelperfect": true
  },
  "stone_slot_button": {
    "type": "button",
    "hover_control": "hover",
    "default_control": "default",
    "pressed_control": "pressed",
    "bindings": [
      {"binding_type": "collection_details", "binding_collection_name": "stones", "binding_condition": "once"}
    ],
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "default_focus_precedence": 1,
    "button_mappings": [
      {"from_button_id": "button.menu_select", "to_button_id": "button.stone_select", "mapping_type": "pressed"},
      {"from_button_id": "button.menu_ok", "to_button_id": "button.stone_select", "mapping_type": "pressed"},
      {
        "from_button_id": "button.controller_back",
        "to_button_id"  : "button.stone_select",
        "mapping_type"  : "pressed",
        "ignored"       : "(not $is_ps4)"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id"  : "button.stone_select",
        "mapping_type"  : "pressed"
      },
      {"from_button_id": "button.controller_select", "to_button_id": "button.stone_select", "mapping_type": "pressed"},
      {"from_button_id": "button.menu_auto_place", "to_button_id": "button.stone_select", "mapping_type": "pressed"},
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id"  : "button.stone_select",
        "mapping_type"  : "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id"  : "button.stone_select",
        "mapping_type"  : "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id"  : "button.stone_select",
        "mapping_type"  : "pressed"
      },
      {"to_button_id": "button.container_slot_hovered", "mapping_type": "pressed"}
    ],
    "size": [16, 17.9],
    "controls": [
      {
        "item_renderer@common.item_renderer": {
          "size": [15, 17],
          "anchor_to": "center",
          "anchor_from": "center",
          "layer": 6,
          "offset": [1.4, 2],
          "bindings": [
            {
              "binding_name"           : "#item_id_aux",
              "binding_condition"      : "visible",
              "binding_type"           : "collection",
              "binding_collection_name": "stones"
            }
          ]
        }
      },
      {
        "default@stonecutter_screen.button_sprite_template": {
          "$sprite": "assets/minecraft/textures/gui/sprites/container/stonecutter/recipe.png"
        }
      },
      {
        "hover@stonecutter_screen.button_sprite_template": {
          "$sprite": "assets/minecraft/textures/gui/sprites/container/stonecutter/recipe_highlighted.png"
        }
      },
      {
        "pressed@stonecutter_screen.button_sprite_template": {
          "$sprite": "assets/minecraft/textures/gui/sprites/container/stonecutter/recipe.png"
        }
      }
    ]
  },
  "grid_holder": {
    "type": "panel",
    "size": [64, "100%cm"],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [
      {
        "scroll_buffer@global.empty_panel": { "size": [64, "100%sm"] }
      },
      {
        "grid": {
          "type": "grid",
          "size": [64, "default"],
          "offset": [0, -1.2],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "collection_name": "stones",
          "grid_rescaling_type": "horizontal",
          "grid_item_template": "stonecutter_screen.stone_slot_button",
          "bindings": [
            {
              "binding_name"           : "#stone_selector_total_items",
              "binding_name_override"  : "#maximum_grid_items",
              "binding_condition"      : "visible",
              "binding_type"           : "collection",
              "binding_collection_name": "stones"
            }
          ]
        }
      }
    ]
  }
}
