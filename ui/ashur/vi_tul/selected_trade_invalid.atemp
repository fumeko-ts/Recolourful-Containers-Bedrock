{
  "namespace": "selected_trade_invalid",
  "arrow_content@global.empty_panel": {
    "size": [ 28, 21 ],
    "controls": [
      {
        "trade_cross_out@screen_content.image_element": {
          "texture": "assets/sprite_assets/container/villager/out_of_stock",
          "size": [ 28, 21 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 7,
          "bindings": [
            {"binding_type": "collection_details"},
            {"binding_name": "#trade_cross_out_visible", "binding_name_override": "#visible"}
          ]
        }
      }
    ]
  },
  "arrow_controler@common.toggle": {
    "always_listen_to_input": false,
    "always_handle_pointer": false,
    "consume_hover_events": false,
    "focus_enabled": false,
    "focus_magnet_enabled": false,
    "prevent_touch_input": true,
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_select",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "global",
        "consume_event": false
      },
      {
        "from_button_id": "button.menu_ok",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "handle_select": false,
        "handle_deselect": false,
        "mapping_type": "global",
        "consume_event": false
      }
    ],
    "$checked_control": "selected_trade_invalid.arrow_content",
    "$checked_hover_control": "selected_trade_invalid.arrow_content",
    "$unchecked_control": "global.empty_panel",
    "$unchecked_hover_control": "global.empty_panel",
    "$unchecked_locked_control": "global.empty_panel",
    "$unchecked_locked_hover_control": "global.empty_panel",
    "$checked_locked_control": "global.empty_panel",
    "$checked_locked_hover_control": "global.empty_panel"
  },
  "invalid_trade_arrow_collection": {
    "type": "collection_panel",
    "size": [ 28, 21 ],
    "factory": {"name": "selected_pack_factory", "control_name": "selected_trade_invalid.invalid_trade_arrow_base"},
    "collection_name": "trade_tiers",
    "bindings": [ {"binding_name": "#trade_selector_total", "binding_name_override": "#collection_length"} ]
  },
  "invalid_trade_arrow_base": {
    "type": "collection_panel",
    "size": [ 28, 21 ],
    "factory": {"name": "selected_pack_factory", "control_name": "selected_trade_invalid.arrow_base_visuals"},
    "collection_name": "trades",
    "bindings": [
      {
        "binding_name": "#trade_tier_total",
        "binding_name_override": "#collection_length",
        "binding_type": "collection",
        "binding_collection_name": "trade_tiers"
      },
      {
        "binding_name": "#tier_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "trade_tiers",
        "binding_condition": "always"
      }
    ]
  },
  "arrow_base_visuals@common_toggles.light_image_toggle_collection": {
    "size": [ 28, 21 ],
    "$toggle_name": "trade_toggle",
    "$template_toggle": "selected_trade_invalid.arrow_controler",
    "$toggle_binding_type": "global",
    "$toggle_state_binding_name": "#trade_toggle_state",
    "$toggle_enabled_binding_type": "global",
    "$toggle_enabled_binding_name": "#trade_toggle_enabled",
    "$toggle_enabled_binding_condition": "always"
  }
}