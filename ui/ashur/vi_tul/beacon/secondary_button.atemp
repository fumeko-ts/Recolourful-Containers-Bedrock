{
  "namespace": "secondary_button",
  "secondary_button@global.empty_panel": {
    "size": [22, 22],
    "variables": {
      "requires": "($button_name = 'regen')",
      "$controls": [{ "1@secondary_button.secondary_button_template": { "$effect_name": "regen" } }]
    },
    "controls": "$controls",
    "$controls": [
      { "1@secondary_button.secondary_button_template": { "$effect_name": "speed" } },
      { "2@secondary_button.secondary_button_template": { "$effect_name": "haste" } },
      { "3@secondary_button.secondary_button_template": { "$effect_name": "resist" } },
      { "4@secondary_button.secondary_button_template": { "$effect_name": "jump" } },
      { "5@secondary_button.secondary_button_template": { "$effect_name": "strength" } }
    ]
  },
  "secondary_button_template@global.empty_panel": {
    "size": [22, 22],
    "controls": [
      {
        "hover_button": {
          "type": "button",
          "layer": 4,
          "size": [22, 22],
          "offset": [1, 1],
          "default_focus_precedence": 1,
          "hover_control": "hover_text",
          "consume_event": false,
          "$disabled_placeholder|default": "('assets/beacon_button_sprites/secondary/secondary_' + $effect_name + '_locked')",
          "button_mappings": [
            { "to_button_id": "button.container_slot_hovered", "mapping_type": "pressed", "consume_event": false }
          ],
          "controls": [
            {
              "underlay_disabled@screen_content.image_element": {
                "texture": "$disabled_placeholder",
                "size": [22, 22],
                "layer": 3
              }
            },
            {
              "hover_text@common.hover_text": {
                "bindings": [
                  {
                    "binding_name": "#button_hover",
                    "binding_name_override": "#hover_text",
                    "binding_collection_name": "$button_name",
                    "binding_type": "collection"
                  }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_type": "collection",
              "binding_collection_name": "$button_name",
              "binding_name": "#active",
              "binding_name_override": "#is_active"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "(not #is_active)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "toggle_holder@global.empty_panel": {
          "size": [22, 22],
          "bindings": [
            {
              "binding_type": "collection",
              "binding_collection_name": "$button_name",
              "binding_name": "#active",
              "binding_name_override": "#visible"
            }
          ],
          "controls": [
            {
              "toggle_button@common.toggle": {
                "size": [22, 22],
                "layer": 1,
                "offset": [1, 1],
                "focus_wrap_enabled": false,
                "$toggle_name": "$button_name",
                "checked_control": "checked",
                "unchecked_control": "unchecked",
                "checked_hover_control": "checked_hover",
                "unchecked_hover_control": "unchecked_hover",
                "checked_locked_control": "locked_default",
                "unchecked_locked_control": "locked_default",
                "checked_locked_hover_control": "locked_hover",
                "unchecked_locked_hover_control": "locked_hover",
                "bindings": [
                  {
                    "binding_name": "#button_visible",
                    "binding_name_override": "#visible",
                    "binding_condition": "always",
                    "binding_collection_name": "$button_name",
                    "binding_type": "collection"
                  },
                  { "binding_collection_name": "$button_name", "binding_type": "collection_details" },
                  {
                    "binding_type": "collection",
                    "binding_name": "#selected",
                    "binding_collection_name": "$button_name",
                    "binding_name_override": "#toggle_state"
                  }
                ],
                "button_mappings": [
                  {
                    "from_button_id": "button.menu_select",
                    "to_button_id": "button.menu_ok",
                    "mapping_type": "pressed"
                  },
                  { "from_button_id": "button.menu_ok", "to_button_id": "button.menu_ok", "mapping_type": "pressed" }
                ],
                "$unchecked_sprite|default": "('assets/beacon_button_sprites/secondary/secondary_' + $effect_name + '_unchecked')",
                "$unchecked_hover_sprite|default": "('assets/beacon_button_sprites/secondary/secondary_' + $effect_name + '_unchecked_hover')",
                "$checked_sprite|default": "('assets/beacon_button_sprites/secondary/secondary_' + $effect_name + '_checked')",
                "$checked_hover_sprite|default": "('assets/beacon_button_sprites/secondary/secondary_' + $effect_name + '_checked')",
                "controls": [
                  { "unchecked@secondary_button.image_base": { "$texture": "$unchecked_sprite" } },
                  {
                    "unchecked_hover@secondary_button.image_base": {
                      "controls": [{ "hover_text@secondary_button.hover_text": {} }],
                      "$texture": "$unchecked_hover_sprite"
                    }
                  },
                  { "checked@secondary_button.image_base": { "$texture": "$checked_sprite" } },
                  {
                    "checked_hover@secondary_button.image_base": {
                      "controls": [{ "hover_text@secondary_button.hover_text": {} }],
                      "$texture": "$checked_hover_sprite"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#extra_image_selection",
        "binding_name_override": "#visible",
        "ignored": "($effect_name = 'regen')",
        "binding_collection_name": "$effect_name",
        "binding_type": "collection"
      }
    ]
  },
  "hover_text@common.hover_text": {
    "layer": 999,
    "bindings": [
      {
        "binding_name": "#button_hover",
        "binding_name_override": "#hover_text",
        "binding_collection_name": "$button_name",
        "binding_type": "collection"
      }
    ]
  },
  "image_base@screen_content.image_element": { "texture": "$texture", "size": [22, 22] }
}
