{
  "namespace": "furnace",
  "furnace_screen@global.container_screen": {
    "$is_blast_furnace|default": false,
    "$is_smoker|default": false,
    "variables": [
      {
        "requires": "($is_blast_furnace = false or $is_smoker = false)",
        "$screen_content": "furnace_screen.furnace_panel"
      },
      {
        "requires": "($is_blast_furnace = true)",
        "$screen_content": "blast_furnace_screen.blast_furnace_panel"
      },
      {"requires": "($is_smoker = true)", "$screen_content": "smoker_screen.smoker_panel"}
    ]
  }
}