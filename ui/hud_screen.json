{
  "namespace": "hud",

  "item_name_text_root/item_text_aligner/item_text_control/item_text_label": {
    "shadow": true// the item text thing already has shadow set to true so this is not really needed
  },



  "full_progress_bar@screen_content.image_element": {
    "texture": "textures/ui/experience_bar_full.png",
    "size": [ 182, 5 ],
    "keep_ratio": true,
    "clip_direction": "left",
    "clip_pixelperfect": true,
    "bindings": [
      {
        "binding_name": "#exp_progress",
        "binding_name_override": "#clip_ratio",
        "binding_type": "global"
      }
    ]
  },

  "empty_progress_bar@screen_content.image_element": {
    "texture": "textures/ui/experience_bar_empty"
  },

  "progress_bar_nub@screen_content.image_element": {
    "texture": "textures/ui/experiencenub",
    "tiled": "x"
  }
}