{
  "namespace": "crafting_textures",
  "empty_image@screen_content.image_element": {
    "size": [16, 16],
    "keep_ratio": true,
    "anchor_from": "center",
    "anchor_to": "center",
    "bindings": [
      {
        "binding_type": "view",
        "ignored": "($bindings_needed = false)",
        "source_control_name": "$background_image_control_name",
        "resolve_sibling_scope": true,
        "source_property_name": "(#container_item_background = $texture_index)",
        "target_property_name": "#visible"
      }
    ]
  },
  "main_cell_panel": {
    "type": "image",
    "size": "$item_renderer_panel_size",
    "$cell_images_binding_condition|default": "visible",
    "$cell_image_size|default": [ "default", "default" ],
    "$bindings_needed|default": true,
    "controls": [
      {
        "item_render@common.item_renderer": {
          "layer": 16,
          "size": "$item_renderer_size",
          "offset": "$item_renderer_offset",
          "anchor_to": "center",
          "anchor_from": "center"
        }
      },
      {"stack_count@common.stack_count_label": {"layer": 20}},
      {"cell_image_classic@crafting_textures.empty_image": {"$texture_index": 0}},
      {"cell_image_normal@crafting_textures.empty_image": {"$texture_index": 1}},
      {"cell_image_invert@crafting_textures.empty_image": {"$texture_index": 2}},
      {"cell_image_selected@crafting_textures.empty_image": {"$texture_index": 4}},
      {
        "cell_image_red@crafting_textures.empty_image": {
          "nineslice_size": [ 1, 1, 1, 1 ],
          "texture": "textures/atemp/cell_transparent_image_red.png",
          "size": "$cell_image_size",
          "$texture_index": 3,
          "layer": 10,
          "controls": [
            {
              "white@crafting_textures.empty_image": {
                "texture": "textures/atemp/white",
                "$bindings_needed": false,
                "alpha": 0.2,
                "layer": 12
              }
            }
          ]
        }
      },
      {
        "cell_image_darkgrey@crafting_textures.empty_image": {
          "nineslice_size": [ 1, 1, 1, 1 ],
          "texture": "textures/atemp/cell_transparent_image_red.png",
          "size": "$cell_image_size",
          "$texture_index": 7,
          "layer": 10,
          "controls": [
            {
              "white@crafting_textures.empty_image": {
                "texture": "textures/atemp/white",
                "$bindings_needed": false,
                "alpha": 0.2,
                "layer": 12
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#container_item_background",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection_name",
        "binding_condition": "$cell_images_binding_condition"
      }
    ]
  },
  "crafting_input_grid_item@global.inventory_container_item_recipe": {
    "$item_collection_name": "crafting_input_items",
    "$background_images": "crafting_textures.main_cell_panel",
    "$item_renderer_binding_condition": "always",
    "$button_ref": "crafting.inventory_container_slot_button"
  },
  "output_cell_textures@crafting_textures.main_cell_panel": {"$cell_images_binding_condition": "always"}
}