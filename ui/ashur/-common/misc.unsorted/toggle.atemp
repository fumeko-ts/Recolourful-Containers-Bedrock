{
  "namespace": "toggle",
  "tab_panel": {
    "type": "panel",
    "$tab_content|default": "global.empty_panel",
    "$texture_sould_keep_ratio|default": false,
    "$toggle_hover_text|default": "null",
    "variables": { "requires": "($toggle_hover_text = 'null')", "$hover_path|default": "global.empty_panel" },
    "$hover_path|default": "global.hover_text",
    "controls": [
      {
        "hover_text@$hover_path": {
          "ignored": "($needs_hover_text = false)",
          "property_bag": { "#hover_text": "$toggle_hover_texts" }
        }
      },
      {
        "tab_image@screen_content.image_element": {
          "anchor_to": "center",
          "anchor_from": "center",
          "texture": "$tab_texture",
          "offset": "$toggle_offset",
          "layer": "$tab_content_layer",
          "keep_ratio": "$texture_sould_keep_ratio"
        }
      },
      {
        "tab_content_sizer": {
          "type": "panel",
          "$tab_content_size|default": ["100% - 4px", "100% - 4px"],
          "size": "$tab_content_size",
          "controls": [{ "tab_content@$tab_content": { "offset": "$tab_content_offset", "layer": 6 } }]
        }
      }
    ]
  },
  "tab_toggle": {
    "type": "panel",
    "anchor_to": "center",
    "anchor_from": "center",
    "$tab_panel|default": "toggle.tab_panel",
    "$is_tab|default": true,
    "$is_creative|default": false,
    "$is_radio_toggle|default": true,
    "$recipe_inventory|default": false,
    "$toggle_reset_on_focus_lost|default": true,
    "$tab_view_binding_name|default": "tab",
    "$unchecked_offset|default": [0, 0],
    "$toggle_binding_type": "global",
    "$checked_offset|default": [0, -2],
    "$toggle_base_offset_checked|default": [0, 0],
    "$toggle_base_offset_unchecked|default": [0, 0],
    "$toggle_hover_text|default": "null",
    "$needs_hover_text|default": false,
    "$toggle_hover_texts|default": "hover_text_not_set",
    "controls": [
      {
        "$tab_view_binding_name@common.toggle": {
          "radio_toggle_group": "$is_radio_toggle",
          "reset_on_focus_lost": "$toggle_reset_on_focus_lost",
          "variables": { "requires": "($is_tab = false)", "$tab_content_offset|default": [0, 0] },
          "controls": [
            {
              "unchecked@$tab_panel": {
                "$toggle_hover_text": "null",
                "$toggle_offset": "$toggle_base_offset_unchecked",
                "$tab_content_offset": "$unchecked_offset",
                "$tab_texture": "$unchecked_default_image",
                "$tab_content_layer": 1
              }
            },
            {
              "unchecked_hover@$tab_panel": {
                "$toggle_hover_texts": "$toggle_hover_text",
                "$toggle_offset": "$toggle_base_offset_unchecked",
                "$tab_content_offset": "$unchecked_offset",
                "$tab_texture": "$unchecked_hover_image",
                "$tab_content_layer": 1
              }
            },
            {
              "unchecked_locked@$tab_panel": {
                "$toggle_hover_text": "null",
                "$toggle_offset": "$toggle_base_offset_unchecked",
                "$tab_content_offset": "$unchecked_offset",
                "$tab_texture": "$unchecked_locked_image",
                "$tab_content_layer": 1
              }
            },
            {
              "unchecked_locked_hover@$tab_panel": {
                "$toggle_hover_texts": "$toggle_hover_text",
                "$toggle_offset": "$toggle_base_offset_unchecked",
                "$tab_content_offset": "$unchecked_offset",
                "$tab_texture": "$unchecked_locked_hover_image",
                "$tab_content_layer": 1
              }
            },
            {
              "checked@$tab_panel": {
                "$toggle_hover_text": "null",
                "$toggle_offset": "$toggle_base_offset_checked",
                "$tab_content_offset": "$checked_offset",
                "$tab_texture": "$checked_default_image",
                "$tab_content_layer": 5
              }
            },
            {
              "checked_hover@$tab_panel": {
                "$toggle_hover_texts": "$toggle_hover_text",
                "$toggle_offset": "$toggle_base_offset_checked",
                "$tab_content_offset": "$checked_offset",
                "$tab_texture": "$checked_hover_image",
                "$tab_content_layer": 5
              }
            },
            {
              "checked_locked@$tab_panel": {
                "$toggle_hover_text": "null",
                "$toggle_offset": "$toggle_base_offset_checked",
                "$tab_content_offset": "$checked_offset",
                "$tab_texture": "$checked_locked_image",
                "$tab_content_layer": 5
              }
            },
            {
              "checked_locked_hover@$tab_panel": {
                "$toggle_hover_texts": "$toggle_hover_text",
                "$toggle_offset": "$toggle_base_offset_checked",
                "$tab_content_offset": "$checked_offset",
                "$tab_texture": "$checked_locked_hover_image",
                "$tab_content_layer": 5
              }
            }
          ]
        }
      }
    ]
  },
  "toggle@toggle.tab_toggle": {
    "$is_top_left_tab|default": false,
    "$is_top_right_tab|default": false,
    "$is_bottom_right_tab|default": false,
    "$is_left_tab|default": false,
    "$unchecked_default_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_2.png",
    "$unchecked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_2.png",
    "$unchecked_locked_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_2.png",
    "$unchecked_locked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_2.png",
    "$checked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_2.png",
    "$checked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_2.png",
    "$checked_locked_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_2.png",
    "$checked_locked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_2.png",
    "variables": [
      {
        "requires": "($is_top_left_tab = true)",
        "$unchecked_default_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_1.png",
        "$unchecked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_1.png",
        "$unchecked_locked_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_1.png",
        "$unchecked_locked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_1.png",
        "$checked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_1.png",
        "$checked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_1.png",
        "$checked_locked_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_1.png",
        "$checked_locked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_1.png"
      },
      {
        "requires": "($is_top_right_tab = true)",
        "$unchecked_default_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_7.png",
        "$unchecked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_7.png",
        "$unchecked_locked_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_7.png",
        "$unchecked_locked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_7.png",
        "$checked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_7.png",
        "$checked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_7.png",
        "$checked_locked_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_7.png",
        "$checked_locked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_selected_7.png"
      },
      {
        "requires": "($is_bottom_right_tab = true)",
        "$unchecked_default_image": "assets/sprite_assets/container/creative_inventory/tab_bottom_unselected_7.png",
        "$unchecked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_bottom_unselected_7.png",
        "$unchecked_locked_image": "assets/sprite_assets/container/creative_inventory/tab_bottom_unselected_7.png",
        "$unchecked_locked_hover_image": "assets/sprite_assets/container/creative_inventory/tab_bottom_unselected_7.png",
        "$checked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_bottom_selected_7.png",
        "$checked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_bottom_selected_7.png",
        "$checked_locked_image|default": "assets/sprite_assets/container/creative_inventory/tab_bottom_selected_7.png",
        "$checked_locked_hover_image|default": "assets/sprite_assets/container/creative_inventory/tab_bottom_selected_7.png"
      },
      {
        "requires": "($is_left_tab = true)",
        "$unchecked_default_image": "assets/sprite_assets/recipe_book/tab.png",
        "$unchecked_hover_image": "assets/sprite_assets/recipe_book/tab.png",
        "$unchecked_locked_image": "assets/sprite_assets/recipe_book/tab.png",
        "$unchecked_locked_hover_image": "assets/sprite_assets/recipe_book/tab.png",
        "$checked_default_image|default": "assets/sprite_assets/recipe_book/tab_selected.png",
        "$checked_hover_image|default": "assets/sprite_assets/recipe_book/tab_selected.png",
        "$checked_locked_image|default": "assets/sprite_assets/recipe_book/tab_selected.png",
        "$checked_locked_hover_image|default": "assets/sprite_assets/recipe_book/tab_selected.png"
      }
    ]
  },
  "radio_toggle@global.empty_panel": {
    "size": "$size",
    "$size": [18, 18],
    "$controls|default": [],
    "$is_radio_toggle|default": true,
    "$is_default_active|default": false,
    "controls": [
      {
        "$toggle_control_name": {
          "type": "toggle",
          "size": "$size",
          "$hover|default": false,
          "sound_name": "random.click",
          "sound_volume": 1.0,
          "sound_pitch": 1.0,
          "toggle_name": "$toggle_name",
          "unchecked_control": "default",
          "unchecked_hover_control": "default_hover",
          "checked_control": "checked",
          "checked_hover_control": "checked_hover",
          "radio_toggle_group": "$is_radio_toggle",
          "toggle_group_forced_index": "$toggle_group_forced_index",
          "toggle_group_default_selected": 0,
          "reset_on_focus_lost": true,
          "toggle_default_state": "$is_default_active",
          "property_bag": {
            "#toggle_state": true
          },
          "controls": "$controls",
          "bindings": [
            {
              "binding_type": "global",
              "binding_condition": "always",
              "binding_name": "$toggle_binding_value",
              "binding_name_override": "#toggle_state"
            }
          ],
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.menu_ok",
              "mapping_type": "pressed"
            }
          ]
        }
      }
    ]
  }
}
