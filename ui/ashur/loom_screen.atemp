{
  "namespace": "loom_screen",
  "loom_panel@container_common.container_details": {
    "size": [176, 166],
    "$screen_controls": [
      {
        "close@global.close_button": {
          "offset": [14, -4],
          "$pressed": "textures/ui/ashur/close_pressed",
          "$default": "textures/ui/ashur/close_default",
          "$hover": "textures/ui/ashur/close_hover"
        }
      },
      { "common_panel@screen_content.container_base": { "$loom_screen": true } },
      {
        "loom_top_half@global.empty_panel": {
          "size": [176, 78],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "controls": [
            {
              "inputs_and_label@global.empty_stack": {
                "orientation": "vertical",
                "size": [50, 62],
                "anchor_to": "top_left",
                "anchor_from": "top_left",
                "controls": [
                  { "filler_1@global.empty_panel": { "size": ["fill", 4] } },
                  { "smithing_label@global.empty_panel": { "size": ["fill", 21] } },
                  {
                    "input_top@global.empty_stack": {
                      "orientation": "horizontal",
                      "size": [50, 18],
                      "controls": [
                        { "filler_1@global.empty_panel": { "size": [12, "fill"] } },
                        {
                          "banner_slot@global.container_item": {
                            "$item_collection": "loom_input_items",
                            "$cell_overlay_ref": "loom_screen.banner_empty_image"
                          }
                        },
                        { "filler_2@global.empty_panel": { "size": [2, "fill"] } },
                        {
                          "dye_slot@global.container_item": {
                            "$item_collection": "loom_dye_items",
                            "$cell_overlay_ref": "loom_screen.dye_empty_image"
                          }
                        }
                      ]
                    }
                  },
                  { "filler_2@global.empty_panel": { "size": ["fill", 1] } },
                  {
                    "input_bottom@global.empty_stack": {
                      "orientation": "horizontal",
                      "size": [50, 18],
                      "controls": [
                        { "filler_1@global.empty_panel": { "size": [22, "fill"] } },
                        {
                          "pattern_panel@global.empty_panel": {
                            "size": [18, 18],
                            "controls": [
                              {
                                "pattern_slot@global.container_item": {
                                  "$item_collection": "loom_material_items",
                                  "$cell_overlay_ref": "loom_screen.banner_pattern_empty_image"
                                }
                              }
                            ]
                          }
                        },
                        { "filler_2@global.empty_panel": { "size": [10, "fill"] } }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "scroll_panel@global.empty_panel": {
                "size": [131, 69],
                "anchor_to": "top_left",
                "anchor_from": "top_left",
                "controls": [
                  {
                    "scroll_panel@loom_screen.scroll_panel": {
                      "bindings": [
                        {
                          "binding_type": "collection",
                          "binding_collection_name": "loom_dye_items",
                          "binding_name": "#item_id_aux",
                          "binding_name_override": "#loom_dye_id"
                        },
                        {
                          "binding_type": "collection",
                          "binding_collection_name": "loom_input_items",
                          "binding_name": "#item_id_aux",
                          "binding_name_override": "#loom_input_id"
                        },
                        {
                          "binding_type": "view",
                          "binding_condition": "always",
                          "source_property_name": "((not (#loom_dye_id = -1)) and (not (#loom_input_id = -1)))",
                          "target_property_name": "#visible"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "output_holder@global.empty_panel": {
                "size": [34, 74],
                "anchor_to": "top_right",
                "anchor_from": "top_right",
                "controls": [
                  {
                    "result_item_slot@global.container_item": {
                      "anchor_to": "bottom_left",
                      "anchor_from": "bottom_left",
                      "$item_collection": "loom_result_items",
                      "$button_ref": "button_mappings.loom_result_slot_button"
                    }
                  }
                ]
              }
            },
            {
              "banner_viewer@global.empty_panel": {
                "size": [35, 48],
                "anchor_to": "top_right",
                "anchor_from": "top_right",
                "controls": [
                  {
                    "result_banner_renderer@global.custom_renderer": {
                      "$type": "banner_pattern_renderer",
                      "size": [20, 40],
                      "anchor_from": "bottom_left",
                      "anchor_to": "bottom_left",
                      "bindings": [
                        {
                          "binding_name": "#result_patterns",
                          "binding_name_override": "#banner_patterns",
                          "binding_condition": "always_when_visible"
                        },
                        {
                          "binding_name": "#result_colors",
                          "binding_name_override": "#banner_colors",
                          "binding_condition": "always_when_visible"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "bottom@global.inventory_bottom_half": { "anchor_to": "bottom_middle", "anchor_from": "bottom_middle" }
      },
      {
        "disabled_scroll_box@global.empty_panel": {
          "size": [57, 28],
          "anchor_to": "top_right",
          "anchor_from": "top_right",
          "controls": [
            {
              "disabled_box@screen_content.image_element": {
                "texture": "assets/sprite_assets/container/loom/scroller_disabled",
                "size": [12, 15],
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left"
              }
            }
          ],
          "bindings": [
            {
              "binding_type": "collection",
              "binding_collection_name": "loom_input_items",
              "binding_name": "#item_id_aux",
              "binding_name_override": "#loom_input_id"
            },
            {
              "binding_type": "collection",
              "binding_collection_name": "loom_dye_items",
              "binding_name": "#item_id_aux",
              "binding_name_override": "#loom_dye_id"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "((#loom_dye_id = -1) or (#loom_input_id = -1))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
  "item_empty_image@screen_content.image_element": {
    "texture": "$current_cell_texture",
    "uv_size": [16, 16],
    "size": [16, 16],
    "anchor_from": "center",
    "anchor_to": "center",
    "bindings": [
      {
        "binding_name": "#empty_image_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection"
      }
    ]
  },
  "banner_empty_image@loom_screen.item_empty_image": {
    "$current_cell_texture|default": "assets/sprite_assets/container/slot/banner"
  },
  "dye_empty_image@loom_screen.item_empty_image": {
    "$current_cell_texture|default": "assets/sprite_assets/container/slot/dye"
  },
  "banner_pattern_empty_image@loom_screen.item_empty_image": {
    "$current_cell_texture|default": "assets/sprite_assets/container/slot/banner_pattern"
  },

  "scroll_panel@scroll_panel.scroll_panel": {
    "$scroll_size": [12, 56.2],
    "size": [73, 56.2],
    "offset": [1, 0.4],
    "$scroll_view_port_size": [71, 56.2],
    "$scrolling_pane_size": ["100%", "100%"],
    "$scroll_track_offset": [27.6, -1],
    "anchor_to": "bottom_right",
    "anchor_from": "bottom_right",
    "$scroll_box_image_control": "loom_screen.scroller",
    "$collection_name": "patterns",
    "$scrolling_content": "loom_screen.scroll_grid_holder"
  },
  "scroller@screen_content.image_element": {
    "tiled": true,
    "nineslice_size": [6, 7, 6, 6],
    "tiled_scale": [1, 1],
    "offset": [2, 0.8],
    "anchor_to": "center",
    "anchor_from": "center",
    "texture": "assets/sprite_assets/container/loom/scroller",
    "size": [12, "100%"]
  },
  "scroll_grid_holder@global.empty_panel": {
    "size": [56, "100%cm"],
    "anchor_to": "center",
    "anchor_from": "center",
    "offset": [0, -0.2],
    "controls": [
      { "scroll_buffer@global.empty_panel": { "size": [56, "100%sm"] } },
      {
        "scroll_grid": {
          "type": "grid",
          "size": [56, "default"],
          "collection_name": "$collection_name",
          "anchor_to": "center",
          "anchor_from": "center",
          "grid_rescaling_type": "horizontal",
          "grid_fill_direction": "vertical",
          "$grid_item_template|default": "loom_screen.pattern_button",
          "grid_item_template": "$grid_item_template",
          "bindings": [
            {
              "binding_name": "#pattern_selector_total_items",
              "binding_name_override": "#maximum_grid_items",
              "binding_condition": "visible",
              "binding_type": "collection",
              "binding_collection_name": "$collection_name"
            }
          ]
        }
      }
    ]
  },
  "pattern_button": {
    "type": "input_panel",
    "size": [14, 14],
    "$background_image_control_name|default": "bg",
    "controls": [
      {
        "$background_image_control_name@global.empty_panel": {
          "size": [14, 14],
          "offset": [1, 0],
          "layer": 1,
          "controls": [
            {
              "default@screen_content.image_element": {
                "size": [14, 14],
                "nineslice_size": 1,
                "texture": "assets/sprite_assets/container/loom/pattern",
                "bindings": [
                  {
                    "binding_type": "collection",
                    "binding_condition": "always",
                    "binding_collection_name": "$collection_name",
                    "binding_name": "(#pattern_cell_background_texture = 'textures/ui/cell_image_normal')",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "selected@screen_content.image_element": {
                "size": [14, 14],
                "nineslice_size": 1,
                "texture": "assets/sprite_assets/container/loom/pattern_selected",
                "bindings": [
                  {
                    "binding_type": "collection",
                    "binding_condition": "always",
                    "binding_collection_name": "$collection_name",
                    "binding_name": "(#pattern_cell_background_texture = 'textures/ui/cell_image_invert')",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "banner_template@screen_content.image_element": {
          "anchor_to": "center",
          "anchor_from": "center",
          "keep_ratio": true,
          "layer": 10,
          "texture": "#texture",
          "size": [5, 10],
          "offset": [1, 0],
          "bindings": [
            {
              "binding_name": "#banner_patterns",
              "binding_type": "collection",
              "binding_collection_name": "patterns"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "('textures/ui/ashur/banner_patterns/' + #banner_patterns)",
              "target_property_name": "#texture"
            }
          ]
        }
      },
      {
        "banner_bg@screen_content.image_element": {
          "anchor_to": "center",
          "anchor_from": "center",
          "keep_ratio": true,
          "offset": [1, 0],
          "texture": "textures/ui/ashur/banner_patterns/banner_bg",
          "size": [5, 10],
          "layer": 6
        }
      },
      {
        "pattern_slot_button": {
          "type": "button",
          "$focus_id|default": "",
          "offset": [0, -1],
          "$focus_override_down|default": "",
          "$focus_override_up|default": "",
          "$focus_override_left|default": "",
          "$focus_override_right|default": "",
          "$focus_id_binding_type|default": "collection",
          "$focus_override_down_binding_type|default": "collection",
          "$focus_override_up_binding_type|default": "collection",
          "$focus_override_left_binding_type|default": "collection",
          "$focus_override_right_binding_type|default": "collection",
          "focus_identifier": "$focus_id",
          "focus_change_down": "$focus_override_down",
          "focus_change_up": "$focus_override_up",
          "focus_change_left": "$focus_override_left",
          "focus_change_right": "$focus_override_right",
          "focus_enabled": true,
          "focus_wrap_enabled": false,
          "focus_magnet_enabled": true,
          "sound_name": "ui.loom.select_pattern",
          "sound_volume": 1.0,
          "sound_pitch": 1.0,
          "default_focus_precedence": 1,
          "layer": 1,
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "$collection_name",
              "binding_condition": "once"
            },
            {
              "binding_type": "$focus_id_binding_type",
              "binding_name": "#focus_identifier",
              "binding_name_override": "#focus_identifier",
              "binding_collection_name": "$collection_name",
              "binding_condition": "once"
            },
            {
              "binding_type": "$focus_override_down_binding_type",
              "binding_name": "#focus_change_down",
              "binding_name_override": "#focus_change_down",
              "binding_collection_name": "$collection_name",
              "binding_condition": "once"
            },
            {
              "binding_type": "$focus_override_up_binding_type",
              "binding_name": "#focus_change_up",
              "binding_name_override": "#focus_change_up",
              "binding_collection_name": "$collection_name",
              "binding_condition": "once"
            },
            {
              "binding_type": "$focus_override_left_binding_type",
              "binding_name": "#focus_change_left",
              "binding_name_override": "#focus_change_left",
              "binding_collection_name": "$collection_name",
              "binding_condition": "once"
            },
            {
              "binding_type": "$focus_override_right_binding_type",
              "binding_name": "#focus_change_right",
              "binding_name_override": "#focus_change_right",
              "binding_collection_name": "$collection_name",
              "binding_condition": "once"
            }
          ],
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.controller_back",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed",
              "ignored": "(not $is_ps4)"
            },
            {
              "from_button_id": "button.menu_secondary_select",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.controller_select",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_auto_place",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.controller_secondary_select",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_inventory_drop",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_inventory_drop_all",
              "to_button_id": "button.pattern_select",
              "mapping_type": "pressed"
            },
            { "to_button_id": "button.container_slot_hovered", "mapping_type": "pressed" }
          ],
          "hover_control": "hover",
          "controls": [
            {
              "hover@global.empty_panel": {
                "size": [14, 14],
                "controls": [
                  {
                    "hover@screen_content.image_element": {
                      "size": [14, 14],
                      "offset": [1, 1],
                      "nineslice_size": 1,
                      "texture": "assets/sprite_assets/container/loom/pattern_highlighted",
                      "bindings": [
                        {
                          "binding_type": "collection",
                          "binding_condition": "always",
                          "binding_collection_name": "$collection_name",
                          "binding_name": "(not (#pattern_cell_background_texture = 'textures/ui/cell_image_invert'))",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
