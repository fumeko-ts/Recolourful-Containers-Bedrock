  },
  "blast_furnace_screen_3": {
    "anim_type": "uv",
    "from": [ 0, 42 ],
    "to": [ 0, 42 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_4",
    "duration": 2
  },
  "blast_furnace_screen_4": {
    "anim_type": "uv",
    "from": [ 0, 56 ],
    "to": [ 0, 56 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_5",
    "duration": 2
  },
  "blast_furnace_screen_5": {
    "anim_type": "uv",
    "from": [ 0, 70 ],
    "to": [ 0, 70 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_6",
    "duration": 2
  },
  "blast_furnace_screen_6": {
    "anim_type": "uv",
    "from": [ 0, 84 ],
    "to": [ 0, 84 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_0",
    "duration": 2
  },
  "arrow_progress@blast_furnace_screen.blast_furnace_image_controls": {
    "size": [ 24, 16 ],
    "$blast_furnace_sprite": "burn_progress",
    "$source": "#furnace_arrow_ratio",
    "$houkou": "left"
  },
  "flame_progress@blast_furnace_screen.blast_furnace_image_controls": {
    "size": [ 14, 14 ],
    "offset": [ -1, 0 ],
    "anchor_to": "center",
    "anchor_from": "center",
    "$blast_furnace_sprite": "lit_progress",
    "$source": "#furnace_flame_ratio",
    "$houkou": "down"
  }
}