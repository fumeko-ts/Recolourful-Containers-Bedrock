{
  "namespace": "smelting_common",
  "slot_uncraftable@screen_content.image_element": {
    "size": [25, 25],
    "layer": 5,
    "texture": "assets/sprite_assets/recipe_book/slot_uncraftable"
  },
  "toggle@global.empty_panel": {
    "size": [25, 25],
    "$toggle_control_name|default": "('control:' + $item_aux)",
    "$toggle_name|default": "furnace_recipe_items",
    "$toggle_binding_value|default": "('#item:' + $item_aux)",
    "$toggle_group_forced_index|default": -1,
    "grid_position": "$position",
    "$item_aux|default": -1,
    "controls": [
      {
        "item_renderer@global.custom_renderer": {
          "$type": "inventory_item_renderer",
          "size": [16, 16],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [-1, 0],
          "layer": 6,
          "property_bag": { "#item_id_aux": "($item_aux * 65536)" }
        }
      },
      {
        "hover_button": {
          "type": "button",
          "size": [25, 25],
          "layer": 500,
          "default_focus_precedence": 1,
          "hover_control": "controls",
          "consume_event": false,
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "furnace_ingredient_items",
              "binding_condition": "once"
            }
          ],
          "button_mappings": [
            { "to_button_id": "button.container_slot_hovered", "mapping_type": "pressed", "consume_event": false },
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.container_auto_place",
              "mapping_type": "pressed"
            }
          ],
          "controls": [
            {
              "controls@global.empty_panel": {
                "controls": [
                  {
                    "hover_text_java@global.custom_renderer": {
                      "allow_clipping": false,

                      "$type": "bundle_tooltip_renderer",
                      "layer": 900,
                      "controls": [{ "1@smelting_common.java_tooltip_test": { "$hover|default": true } }],
                      "bindings": [
                        {
                          "binding_name": "(not #using_touch)",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },

                  {
                    "tooltip@screen_content.image_element": {
                      "layer": 400,
                      "texture": "textures/ui/purpleBorder",
                      "nineslice_size": 2,
                      "allow_clipping": false,
                      "anchor_from": "left_middle",
                      "anchor_to": "left_middle",
                      "offset": [25, 0],
                      "size": ["100%c + 10px", "100%c + 8px"],
                      "controls": [
                        {
                          "hover_text@global.empty_label": {
                            "localize": true,
                            "shadow": true,
                            "layer": 401,
                            "color": "white",
                            "size": ["default", "default"],
                            "text": "$hover_text"
                          }
                        }
                      ],
                      "bindings": [
                        {
                          "binding_name": "#using_touch",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "toggle@toggle.radio_toggle": {
          "$size": [25, 25],
          "$controls": [
            { "default@smelting_common.slot_uncraftable": {} },
            { "default_hover@smelting_common.slot_uncraftable": { "$hover": true } },

            { "checked_hover@smelting_common.slot_uncraftable": { "$hover": true, "color": "white" } },
            { "checked@smelting_common.slot_uncraftable": {} }
          ]
        }
      }
    ]
  },

  "title_template@screen_content.text_field": {
    "nineslice_size": 1,
    "alpha": 0.8,
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [81, 14]
  },
  "furnace_filter_on@global.empty_image": {
    "offset": [0, 1],
    "texture": "assets/sprite_assets/recipe_book/furnace_filter_disabled.png",
    "size": ["default", "default"],
    "layer": 5
  },
  "furnace_filter_on_hover@global.empty_image": {
    "offset": [0, 1],
    "texture": "assets/sprite_assets/recipe_book/furnace_filter_disabled_highlighted.png",
    "size": ["default", "default"],
    "layer": 5
  },

  "red_overlay@screen_content.image_element": {
    "texture": "textures/ui/ashur/cell_transparent_image_red",
    "size": [18, 18],
    "$item_aux|default": -1,
    "$trigger_name|default": "",
    "nineslice_size": 1,
    "controls": [
      {
        "clear_item@toggle.radio_toggle": {
          "$size": [18, 18],
          "$toggle_control_name|default": "control:clear",
          "$toggle_name|default": "furnace_recipe_items",
          "$toggle_binding_value|default": "#furnace_clear",
          "$toggle_group_forced_index": 0
        }
      },
      {
        "white@global.empty_image": {
          "texture": "textures/ui/ashur/white",
          "size": [16, 16],
          "anchor_to": "center",
          "anchor_from": "center",
          "alpha": 0.2,
          "layer": 12
        }
      },
      {
        "item_renderer@global.custom_renderer": {
          "$type": "inventory_item_renderer",
          "size": [16, 16],
          "anchor_from": "center",
          "anchor_to": "center",
          "property_bag": { "#item_id_aux": "($item_aux * 65536)" }
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "$trigger_name",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },
  "smoker_selected_items@global.empty_panel": {
    "size": [18, 18],
    "layer": 16,
    "controls": [
      { "1@smelting_common.red_overlay": { "$item_aux": 583, "$trigger_name": "control:583" } },
      { "2@smelting_common.red_overlay": { "$item_aux": 310, "$trigger_name": "control:310" } },
      { "3@smelting_common.red_overlay": { "$item_aux": 302, "$trigger_name": "control:302" } },
      { "4@smelting_common.red_overlay": { "$item_aux": 297, "$trigger_name": "control:297" } },
      { "5@smelting_common.red_overlay": { "$item_aux": 295, "$trigger_name": "control:295" } },
      { "6@smelting_common.red_overlay": { "$item_aux": 287, "$trigger_name": "control:287" } },
      { "7@smelting_common.red_overlay": { "$item_aux": 286, "$trigger_name": "control:286" } },
      { "8@smelting_common.red_overlay": { "$item_aux": 284, "$trigger_name": "control:284" } },
      { "9@smelting_common.red_overlay": { "$item_aux": 408, "$trigger_name": "control:408" } }
    ],
    "bindings": [
      {
        "binding_type": "collection",
        "binding_collection_name": "furnace_ingredient_items",
        "binding_name": "#item_id_aux",
        "binding_condition": "always"
      },
      {
        "binding_type": "view",
        "binding_condition": "always",
        "source_property_name": "(#item_id_aux = -1)",
        "target_property_name": "#visible"
      }
    ]
  },
  //layout toggle
  "button_default@screen_content.image_element": {
    "size": [20, 18],
    "texture": "assets/sprite_assets/recipe_book/button.png"
  },
  "button_hover@screen_content.image_element": {
    "size": [20, 18],
    "texture": "assets/sprite_assets/recipe_book/button_highlighted.png"
  },
  "layout_sprites@toggle.radio_toggle": {
    "$toggle_name|default": "furnace_recipe_book_toggle",
    "$controls": [
      { "default@smelting_common.button_default": {} },
      { "default_hover@smelting_common.button_hover": {} },

      { "checked@smelting_common.button_default": {} },
      { "checked_hover@smelting_common.button_hover": {} }
    ]
  },
  "layout_toggle@global.empty_panel": {
    "size": [20, 18],
    "controls": [
      {
        "1@smelting_common.layout_sprites": {
          "$toggle_control_name|default": "furnace_recipe_1",
          "$toggle_binding_value|default": "#no_recipe_book",
          "$is_default_active": true,
          "$toggle_group_forced_index|default": 0,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "furnace_recipe_2",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "1@smelting_common.layout_sprites": {
          "$toggle_control_name|default": "furnace_recipe_2",
          "$toggle_binding_value|default": "#recipe_book",
          "$toggle_group_forced_index|default": 1,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "furnace_recipe_1",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
   "java_tooltip_test@global.empty_panel": {
    "size": ["200%c", "200%c"],
    "layer": 50,
    "$hover_text|default": "",
    "controls": [
      {
        "tooltip@screen_content.image_element": {
          "layer": 400,
          "texture": "textures/ui/purpleBorder",
          "nineslice_size": 2,
          "allow_clipping": false,
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "offset": [30, 30],
          "size": ["100%c + 10px", "100%c + 8px"],
          "controls": [
            {
              "hover_text@global.empty_label": {
                "localize": true,
                "shadow": true,
                "layer": 401,
                "size": ["default", "default"],
                "text": "$hover_text"
              }
            }
          ],
          "ignored": "(not $hover)"
        }
      }
    ]
  }
}
