{
  "namespace": "bundle",
  "bundle_cell_image@global.empty_panel": {
    "controls": [
      { "cell_item_image@recolourful_bundle.slots": {} },
      {
        "highlight_panel@global.empty_panel": {
          "controls": [
            {
              "highlight_slot@screen_content.highlight_slot": {
                "layer": 1,
                "bindings": [
                  {
                    "binding_name": "(not #using_touch)",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "pocket_selected_slot@common.cell_image_selected": {
                "layer": 1,
                "visible": false,
                "bindings": [
                  {
                    "binding_name": "#using_touch",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#is_selected_bundle_item_slot",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            }
          ]
        }
      }
    ]
  },

  "bundle_tooltip_slot_button@common.container_slot_button_prototype": {
    "$pressed_button_name": "button.tapped_bundle_item_icon",
    "size": ["100%", "100%"],
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.hide_bundle_tooltip",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_back",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed",
        "ignored": "(not $is_ps4)"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      }
    ]
  },
  "bundle_tooltip_slot_classic@global.empty_panel": {
    "size": [18, 18],
    "controls": [
      {
        "item_in_bundle_tooltip_pocket@common.container_item": {
          "size": [18, 18],
          "offset": [3, 0],
          "$background_images|default": "bundle.bundle_cell_image",
          "$button_ref|default": "bundle.bundle_tooltip_slot_button",
          "bindings": [
            {
              "binding_name": "#show_bundle_item_slot",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            }
          ]
        }
      },
      {
        "more_hidden_items_label@global.empty_label": {
          "size": ["default", 10],
          "offset": [3, 0],
          "color": "$item_stack_count_color",
          "layer": 2,
          "text": "#more_hidden_items_text",
          "shadow": true,
          "bindings": [
            {
              "binding_name": "#is_hidden_items_label",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            },
            {
              "binding_name": "#more_hidden_items_text",
              "binding_condition": "visible"
            }
          ]
        }
      }
    ]
  },

