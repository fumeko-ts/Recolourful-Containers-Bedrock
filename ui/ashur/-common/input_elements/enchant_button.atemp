{
  "namespace": "enchant_button",
  "exp_orb_template@screen_content.image_element": {
    "layer": 6,
    "size": [16, 16],
    "bindings": [
      {
        "binding_name": "$binding_name",
        "binding_name_override": "#visible",
        "binding_collection_name": "#enchant_buttons",
        "binding_type": "collection"
      }
    ]
  },
  "orb_icons@global.empty_panel": {
    "size": [16, 16],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [1, 1],
    "controls": [
      {
        "enabled@enchant_button.exp_orb_template": {
          "texture": "$selectable_orb",
          "$binding_name": "#selectable_dust_is_visible"
        }
      },
      {
        "disabled@enchant_button.exp_orb_template": {
          "texture": "$unselectable_orb",
          "$binding_name": "#unselectable_dust_is_visible"
        }
      }
    ]
  },
  "cost_template@global.empty_label": {
    "shadow": false,
    "layer": 9,
    "text": "#cost",
    "size": ["default", 10],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "bindings": [
      {
        "binding_name": "#cost",
        "binding_collection_name": "#enchant_buttons",
        "binding_type": "collection"
      }
    ]
  },
  "exp_price@global.empty_panel": {
    "size": ["60%", 10],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [-2, -1],
    "controls": [
      {
        "enabled@global.empty_panel": {
          "size": ["100%", "100%"],
          "controls": [
            {
              "text_overlay@enchant_button.cost_template": {
                "color": "$xp_price_color_enabled_state"
              }
            },
            {
              "text_shadow@enchant_button.cost_template": {
                "offset": [1, 1],
                "layer": 7,
                "color": "$xp_price_shadow_color_enabled_state"
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#selectable_dust_is_visible",
              "binding_name_override": "#visible",
              "binding_collection_name": "#enchant_buttons",
              "binding_type": "collection"
            }
          ]
        }
      },
      {
        "disabled@global.empty_panel": {
          "size": ["100%", "100%"],
          "controls": [
            {
              "text_overlay@enchant_button.cost_template": {
                "color": "$xp_price_color_disabled_state"
              }
            },
            {
              "text_shadow@enchant_button.cost_template": {
                "offset": [1, 1],
                "layer": 7,
                "color": "$xp_price_shadow_color_disabled_state"
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#unselectable_dust_is_visible",
              "binding_name_override": "#visible",
              "binding_collection_name": "#enchant_buttons",
              "binding_type": "collection"
            }
          ]
        }
      }
    ]
  },
  "rune_template@global.empty_label": {
    "text": "#runes",
    "layer": 9,
    "font_type": "rune",
    "text_alignment": "left",
    "size": ["default", 15],
    "anchor_from": "top_left",
    "anchor_to": "top_left",

    "bindings": [
      {
        "binding_collection_name": "#enchant_buttons",
        "binding_name": "#runes",
        "binding_type": "collection"
      },
      {
        "binding_name": "$binding_name",
        "binding_name_override": "#visible",
        "binding_collection_name": "#enchant_buttons",
        "binding_type": "collection"
      }
    ]
  },
  "runes@global.empty_panel": {
    "size": [69, 15],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [20, 2],
    "clips_children": true,
    "controls": [
      {
        "disabled@enchant_button.rune_template": {
          "color": "$runes_disabled_color",
          "$binding_name": "#unselectable_dust_is_visible"
        }
      },
      {
        "enabled@enchant_button.rune_template": {
          "color": "$runes_enabled_color",
          "$binding_name": "#selectable_dust_is_visible"
        }
      }
    ]
  },
  "button@global.empty_panel": {
    "size": [108, 19],
    "layer": 3,
    "controls": [
      {
        "hover_text": {
          "type": "button",
          "layer": 500,
          "size": [108, 19],
          "default_focus_precedence": 1,
          "hover_control": "hover",
          "consume_event": false,
          "button_mappings": [
            {
              "to_button_id": "button.container_slot_hovered",
              "mapping_type": "pressed",
              "consume_event": false
            }
          ],
          "controls": [
            {
              "hover@global.empty_panel": {
                "size": [108, 19],
                "controls": [
                  {
                    "hover_text@global.hover_text": {
                      "bindings": [
                        {
                          "binding_name": "#hover_text",
                          "binding_collection_name": "#enchant_buttons",
                          "binding_type": "collection"
                        },
                        {
                          "binding_type": "view",
                          "binding_condition": "always",
                          "source_property_name": "('§7' + (#hover_text - '§f' - '§o'))",
                          "target_property_name": "#hover_text"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#hover_text",
              "binding_collection_name": "#enchant_buttons",
              "binding_type": "collection"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "(not (#hover_text = ''))",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "button_default": {
          "type": "button",
          "layer": 14,
          "size": [108, 19],
          "hover_control": "hover",
          "default_control": "default",
          "pressed_control": "pressed",
          "locked_control": "locked",
          "enabled": false,
          "bindings": [
            {
              "binding_type": "collection_details",
              "binding_collection_name": "#enchant_buttons"
            },
            {
              "binding_name": "#selectable_dust_is_visible",
              "binding_name_override": "#enabled",
              "binding_collection_name": "#enchant_buttons",
              "binding_type": "collection"
            }
          ],
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_ok",
              "mapping_type": "$mapping_type"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.menu_ok",
              "mapping_type": "focused"
            },
            {
              "from_button_id": "button.controller_back",
              "to_button_id": "button.menu_ok",
              "mapping_type": "focused",
              "ignored": "(not $is_ps4)"
            }
          ],
          "$mapping_type|default": "pressed",
          "variables": {
            "requires": "($touch or $pocket_edition)",
            "$mapping_type|default": "double_pressed"
          },
          "$selectable_orb|default": "('assets/sprite_assets/container/enchanting_table/level_' + $collection_index)",
          "$unselectable_orb|default": "('assets/sprite_assets/container/enchanting_table/level_' + $collection_index + '_disabled')",
          "$binding_name|default": "none",
          "controls": [
            {
              "button_content@global.empty_panel": {
                "size": [108, 19],
                "controls": [
                  { "orb_icons@enchant_button.orb_icons": {} },
                  { "price@enchant_button.exp_price": {} },
                  { "runes@enchant_button.runes": {} }
                ]
              }
            },
            { "default@enchant_button.enchanting_button": {} },
            { "pressed@enchant_button.enchanting_button": {} },
            { "hover@enchant_button.enchanting_button_highlight": {} },
            { "locked@enchant_button.enchanting_button_disabled": {} }
          ]
        }
      }
    ]
  },
  "enchant_texture_template@screen_content.image_element": {
    "size": [108, 19],
    "layer": 4
  },
  "enchanting_button_disabled@enchant_button.enchant_texture_template": {
    "texture": "assets/sprite_assets/container/enchanting_table/enchant_disabled"
  },
  "enchanting_button@enchant_button.enchant_texture_template": {
    "texture": "assets/sprite_assets/container/enchanting_table/enchant"
  },
  "enchanting_button_highlight@enchant_button.enchant_texture_template": {
    "texture": "assets/sprite_assets/container/enchanting_table/enchant_highlighted"
  }
}
