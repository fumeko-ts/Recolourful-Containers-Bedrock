{
  "namespace": "blast_furnace_screen",
  "blast_furnace_panel@container_common.container_details": {
    "size": [ 176, 166 ],
    "$screen_controls": [
      {"common_panel@screen_content.container_base": {"$blast_furnace_screen": true}},
      {
        "blast_furnace_top_half@global.empty_stack": {
          "orientation": "vertical",
          "size": [ 176, 70 ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "controls": [
            {"filler_1@global.empty_panel": {"size": [ "fill", 6 ]}},
            {
              "label_stack@global.empty_stack": {
                "orientation": "horizontal",
                "size": [ 176, 10 ],
                "controls": [
                  {"filler_1@global.empty_panel": {"size": [ 67, "fill" ]}},
                  {"label_holder@global.empty_panel": {"size": [ 109, 10 ]}}
                ]
              }
            },
            {
              "main_content@global.empty_stack": {
                "orientation": "horizontal",
                "size": [ 176, 54 ],
                "controls": [
                  {"filler_1@global.empty_panel": {"size": [ 55, "fill" ]}},
                  {
                    "inputs@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 54 ],
                      "controls": [
                        {"smelt_input_item@global.container_item": {"$item_collection": "furnace_ingredient_items"}},
                        {
                          "flame_buffer_and_holder": {
                            "type": "input_panel",
                            "contained": true,
                            "size": [ 18, 18 ],
                            "controls": [
                              {"smelt_flame_progress@blast_furnace_screen.flame_progress": {}}
                            ]
                          }
                        },
                        {"fuel_input_item@global.container_item": {"$item_collection": "furnace_fuel_items"}}
                      ]
                    }
                  },
                  {"filler_2@global.empty_panel": {"size": [ 6, "fill" ]}},
                  {
                    "arrow_holder@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 24, 54 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 18 ]}},
                        {"arrow_progress@blast_furnace_screen.arrow_progress": {}},
                        {"filler_2@global.empty_panel": {"size": [ "fill", 20 ]}}
                      ]
                    }
                  },
                  {"filler_3@global.empty_panel": {"size": [ 8, "fill" ]}},
                  {
                    "item_output_holder@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 26, 54 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 14 ]}},
                        {
                          "cell_holder@global.empty_panel": {
                            "size": [ 26, 26 ],
                            "controls": [
                              {
                                "output_item@global.container_item": {"anchor_to": "center", "anchor_from": "center", "$item_collection": "furnace_output_items"}
                              }
                            ]
                          }
                        },
                        {"filler_2@global.empty_panel": {"size": [ "fill", 14 ]}}
                      ]
                    }
                  },
                  {"filler_4@global.empty_panel": {"size": [ 35, "fill" ]}}
                ]
              }
            }
          ]
        }
      },
      {
        "bottom@crafting_screen.inventory_bottom_half_with_label": {"anchor_to": "bottom_middle", "anchor_from": "bottom_middle"}
      }
    ]
  },
  "blast_furnace_image_controls@global.empty_image": {
    "layer": 3,
    "texture": "$blast_furnace_sprite_src",
    "$blast_furnace_sprite_src": "('assets/minecraft/textures/gui/sprites/container/blast_furnace/' + $blast_furnace_sprite)",
    "clip_direction": "$houkou",
    "keep_ratio": true,
    "clip_pixelperfect": true,
    "$uv_size": [],
    "$uv": "",
    "uv_size": "$uv_size",
    "uv": "$uv",
    "variables": {
      "requires": "($blast_furnace_sprite = 'lit_progress')",
      "$uv_size": [ 14, 14 ],
      "$uv": "@blast_furnace_screen.blast_furnace_screen_0"
    },
    "bindings": [
      {"binding_name": "$source", "binding_name_override": "#clip_ratio", "binding_condition": "always"}
    ]
  },
  "blast_furnace_screen_0": {
    "anim_type": "uv",
    "from": [ 0, 0 ],
    "to": [ 0, 0 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_1",
    "duration": 2
  },
  "blast_furnace_screen_1": {
    "anim_type": "uv",
    "from": [ 0, 14 ],
    "to": [ 0, 14 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_2",
    "duration": 2
  },
  "blast_furnace_screen_2": {
    "anim_type": "uv",
    "from": [ 0, 28 ],
    "to": [ 0, 28 ],
    "next": "@blast_furnace_screen.blast_furnace_screen_3",
