{
  "progress_bar_nub": {
    "offset": [0, 1],
    "controls": [
      {
        "nub_horse_jump@hud.horse_jump_renderer": {
          "layer": 73,
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "size": [182, 5],
          "controls": [
            {
              "nub_dash@hud.dash_renderer": {
                "size": [182, 5],
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "layer": 75,
                "controls": [
                  {
                    "nub_hotbar@hud.hotbar_chooser": { "offset": [4, 15] }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "exp_progress_bar_and_hotbar": {
    "controls": [
      
      {
        "popup_text_factory": {
          "type": "factory",
          "size": [100, 10],
          "control_ids": {
            "jukebox_text": "@hud.jukebox_popup_text",
            "item_text"   : "@hud.item_name_text"
          }
        }
      },

      {
        "locator_bar@hud.locator_bar": {
          "size": [182, 5],
          "layer": 1,
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "offset": [0, -12]
        }
      },
      {
        "xp_bar_panel@global.empty_panel": {
          "size": [182, 5],
          "controls": [
            {
              "progress_bar_fill_animated@hud.empty_progress_bar": {
                "size": ["100%c", 5],
                "layer": 1,
                "offset": [0, 1],
                "uv_size": [182, 5],
                "controls": [
                  {
                    "xp_fill_texture@screen_content.image_element": {
                      "size": [182, 5],
                      "clip_direction": "left",
                      "layer": 20,
                      "texture": "textures/exp_full",
                      "uv": "@hud.asprite",
                      "uv_size": [182, 5],
                      "clip_pixelperfect": true,
                      "bindings": [
                        {
                          "binding_name"         : "#exp_progress",
                          "binding_name_override": "#clip_ratio",
                          "binding_type"         : "global"
                        }
                      ],
                      "controls": [
                        {
                          "xp_progress_nub@hud.progress_bar_nub": {
                            "size": ["100%c - 10px", 5],
                            "max_size": [190, 5],
                            "layer": 3
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            { "xp_text@hud.progress_text_label": {"layer": 7} }
          ]
        }
      },
      {
        "horse_jump_panel@global.empty_panel": {
          "size": ["100%c", 5],
          "controls": [
            {
              "horse_jump_renderer@hud.horse_jump_renderer": {
                "size": [182, 5],
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "offset": [0, 1],
                "layer": 73,
                "bindings": [
                  {
                    "binding_name"         : "#hotbar_no_xp_bar",
                    "binding_name_override": "#visible"
                  }
                ],
                "controls": [
                  {
                    "dash_renderer@hud.dash_renderer": {
                      "size": [182, 5],
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "offset": [0, 1],
                      "layer": 75,
                      "controls": [
                        {
                          "dash_hotbar@hud.hotbar_chooser": {
                            "offset": [4, 15]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "locator_bar_panel@global.empty_panel": {
          "size": ["100%c", 5],
          "controls": [
            {"locator_xp_text@hud.progress_text_label": {"layer": 9} },
            {"locator_dash@hud.dash_renderer": {"offset": [0, 1],"anchor_from": "bottom_middle","anchor_to": "bottom_middle","size": ["100%sm", 5]}},
            {"locator_horse_jump@hud.horse_jump_renderer": {"offset": [0, 1],"anchor_from": "bottom_middle","anchor_to": "bottom_middle","size": ["100%sm", 5]}},
            {
              "spectator_check_panel@global.empty_panel": {
                "size": ["100%c", "100%c"],
                "controls": [
                  {"hotbar_visible@hud.hotbar_chooser": {"offset": [4, 16],"bindings": [{"binding_name": "(not #is_spectator_mode)","binding_name_override": "#visible"}]}},
                  {"spectator_mode_guard@global.empty_panel": {"size": [180, 5],"bindings": [{"binding_name": "#is_spectator_mode","binding_name_override": "#visible"}]}}
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name"         : "#hotbar_with_locator_bar",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },
  "asprite": { "anim_type": "aseprite_flip_book", "initial_uv": [0, 0] },
  "empty_progress_bar@screen_content.image_element": {
    "texture": "textures/ui/experience_bar_empty"
  }
}
