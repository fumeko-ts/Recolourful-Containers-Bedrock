{
  "namespace": "cartography_screen",
  "cartography_panel@container_common.container_details": {
    "size": [ 176, 166 ],
    "$screen_controls": [
      {
        "close@global.close_button": {
          "offset": [ 14, -4 ],
          "$pressed": "textures/ui/ashur/close_pressed",
          "$default": "textures/ui/ashur/close_default",
          "$hover": "textures/ui/ashur/close_hover"
        }
      },
      {
        "compass@screen_content.image_element": {
          "texture": "assets/advanced_sprites/animated/compas.png",
          "size": [ 21, 21 ],
          "layer": 5,
          "offset": [ -7, 6 ],
          "animation_reset_name": "screen_animation_reset",
          "uv_size": [ 21, 21 ],
          "uv": "@compass.compass_0",
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "disable_anim_fast_forward": true
        }
      },
      {
        "text_edit_control@common.text_edit_box": {
          "anchor_to": "bottom_middle",
          "anchor_from": "top_middle",
          "size": [ 176, 18 ],
          "max_length": 300,
          "offset": [ 0, -4 ],
          "$place_holder_text": "#text_box_placeholder_name",
          "$text_edit_box_placeholder_content_binding_name": "#text_box_placeholder_name",
          "$text_edit_box_label_size": [ "default", 10 ],
          "bindings": [ {"binding_name": "#is_rename_mode", "binding_name_override": "#visible"} ]
        }
      },
      {"common_panel@screen_content.container_base": {"$cartography_screen": true}},
      {
        "cartography_top_content@global.empty_stack": {
          "orientation": "vertical",
          "size": [ 176, 79 ],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "controls": [
            {"filler@global.empty_panel": {"size": [ "fill", 13 ]}},
            {
              "main_stack@global.empty_stack": {
                "orientation": "horizontal",
                "size": [ 176, 66 ],
                "controls": [
                  {"filler_1@global.empty_panel": {"size": [ 14, "fill" ]}},
                  {
                    "input_stack@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 66 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 1 ]}},
                        {"1st_input_slot@global.container_item": {"$item_collection": "cartography_input_items"}},
                        {"filler_1@global.empty_panel": {"size": [ "fill", 19 ]}},
                        {"2nd_input_slot@global.container_item": {"$item_collection": "cartography_additional_items"}},
                        {"filler_1@global.empty_panel": {"size": [ "fill", 10 ]}}
                      ]
                    }
                  },
                  {"filler_2@global.empty_panel": {"size": [ 35, "fill" ]}},
                  {
                    "map_image_panel@global.empty_panel": {
                      "size": [ 66, 66 ],
                      "controls": [
                        {
                          "1@cartography_screen.map_image": {
                            "anchor_from": "top_left",
                            "anchor_to": "top_left",
                            "layer": 3,
                            "texture": "assets/sprite_assets/container/cartography_table/duplicated_map",
                            "size": [ 50, 66 ],
                            "$mode": "clone"
                          }
                        },
                        {
                          "2@cartography_screen.map_image": {
                            "anchor_from": "top_right",
                            "anchor_to": "top_right",
                            "layer": 5,
                            "offset": [ 0, 14 ],
                            "texture": "assets/sprite_assets/container/cartography_table/duplicated_map",
                            "size": [ 50, 66 ],
                            "$mode": "clone"
                          }
                        },
                        {
                          "3@cartography_screen.map_image": {"$map_sprite": "assets/sprite_assets/container/cartography_table/map", "$mode": "none"}
                        },
                        {
                          "4@cartography_screen.map_image": {"$map_sprite": "assets/sprite_assets/container/cartography_table/map_rename", "$mode": "rename"}
                        },
                        {
                          "5@cartography_screen.map_image": {"$map_sprite": "assets/sprite_assets/container/cartography_table/map", "$mode": "basic_map"}
                        },
                        {
                          "6@cartography_screen.map_image": {"$map_sprite": "assets/sprite_assets/container/cartography_table/map", "$mode": "locator_map"}
                        },
                        {
                          "7@cartography_screen.map_image": {"$map_sprite": "assets/sprite_assets/container/cartography_table/scaled_map", "$mode": "extend"}
                        },
                        {
                          "8@cartography_screen.map_image": {"$map_sprite": "assets/sprite_assets/container/cartography_table/locked_map", "$mode": "locked"}
                        }
                      ]
                    }
                  },
                  {"filler_3@global.empty_panel": {"size": [ 11, "fill" ]}},
                  {
                    "output_slot_holder@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 66 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 25 ]}},
                        {
                          "result_item_slot@global.container_item": {
                            "$item_collection": "cartography_result_items",
                            "$button_ref": "button_mappings.cartography_output_slot_button"
                          }
                        },
                        {"filler_2@global.empty_panel": {"size": [ "fill", 23 ]}}
                      ]
                    }
                  },
                  {"filler_4@global.empty_panel": {"size": [ 14, "fill" ]}}
                ]
              }
            }
          ]
        }
      },
      {
        "bottom@global.inventory_bottom_half": {"anchor_to": "bottom_middle", "anchor_from": "bottom_middle"}
      },
      {
        "error_containment@global.empty_panel": {
          "size": [ 63, 52 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "controls": [
            {
              "error_holder@global.empty_panel": {
                "size": [ 28, 21 ],
                "anchor_from": "bottom_right",
                "anchor_to": "bottom_right",
                "controls": [
                  {
                    "error@screen_content.image_element": {
                      "size": [ 28, 21 ],
                      "layer": 4,
                      "uv": [ 226, 132 ],
                      "uv_size": [ 28, 21 ],
                      "ignored": true,
                      "texture": "assets/sprites/cartography_table",
                      "bindings": []
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "map_image@screen_content.image_element": {
    "texture": "$map_sprite",
    "controls": [
      {
        "label@global.empty_label": {
          "layer": 40,
          "color": "black",
          "font_size": "medium",
          "text": "$mode",
          "ignored": true,
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "default", "default" ]
        }
      }
    ],
    "bindings": [ {"binding_name": "('#is_' + $mode + '_mode')", "binding_name_override": "#visible"} ]
  }
}