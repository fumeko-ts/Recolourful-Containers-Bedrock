{
  "namespace": "furnace_tabs",
  "furnace_tabs@global.empty_stack": {
    "orientation": "vertical",
    "size": [35, 135],
    "layer": 2,
    "$1_tabs|default": false,
    "$2_tabs|default": false,
    "$3_tabs|default": false,
    "$4_tabs|default": false,
    "$5_tabs|default": false,
    "$tabs_control": [],
    "$first_tab_icons|default" : [{ "1@furnace_tabs.tab_item_renderer": { "$item_id": 417 } }],
    "$second_tab_icons|default": [{ "1@furnace_tabs.tab_item_renderer": { "$item_id": 284 } }],
    "$third_tab_icons|default" : [{ "1@furnace_tabs.tab_item_renderer": { "$item_id": 1   } }],
    "$fourth_tab_icons|default": [
      {"1@furnace_tabs.tab_item_renderer": {"layer": 7,"offset": [6,  0],"$item_id": 546}},
      {"2@furnace_tabs.tab_item_renderer": {"layer": 6,"offset": [-5, 0],"$item_id": 388}}
    ],
    "$fith_tab_icons|default": [
      {"1@furnace_tabs.tab_item_renderer": {"layer": 7,"offset": [6,  0],"$item_id": 546}},
      {"2@furnace_tabs.tab_item_renderer": {"layer": 6,"offset": [-5, 0],"$item_id": 388}}
    ],
    "variables": [
      {
        "requires": "$1_tabs",
        "$tabs_control": [
          { "1@furnace_tabs.first_tab": {} },
          { "space_taker@global.empty_panel": { "size": ["fill", "fill"] } }
        ]
      },
      {
        "requires": "$2_tabs",
        "$tabs_control": [
          { "1@furnace_tabs.first_tab": {} },
          { "2@furnace_tabs.second_tab": {} },
          { "space_taker@global.empty_panel": { "size": ["fill", "fill"] } }
        ]
      },
      {
        "requires": "$3_tabs",
        "$tabs_control": [
          { "1@furnace_tabs.first_tab": {} },
          { "2@furnace_tabs.second_tab": {} },
          { "3@furnace_tabs.third_tab": {} },

          { "space_taker@global.empty_panel": { "size": ["fill", "fill"] } }
        ]
      },
      {
        "requires": "$4_tabs",
        "$tabs_control": [
          { "1@furnace_tabs.first_tab": {} },
          { "2@furnace_tabs.second_tab": {} },
          { "3@furnace_tabs.third_tab": {} },
          { "4@furnace_tabs.fourth_tab": {} },

          { "space_taker@global.empty_panel": { "size": ["fill", "fill"] } }
        ]
      },
      {
        "requires": "$5_tabs",
        "$tabs_control": [
          { "1@furnace_tabs.first_tab": {} },
          { "2@furnace_tabs.second_tab": {} },
          { "3@furnace_tabs.third_tab": {} },
          { "4@furnace_tabs.fourth_tab": {} },
          { "5@furnace_tabs.fith_tab": {} },

          { "space_taker@global.empty_panel": { "size": ["fill", "fill"] } }
        ]
      }
    ],
    "controls": "$tabs_control"
  },
  "tab_item_renderer@global.custom_renderer": {
    "$type": "inventory_item_renderer",
    "size": [16, 16],
    "$item_id|default": -1,
    "property_bag": { "#item_id_aux": "($item_id * 65536)" }
  },
  "survival_tab_icon@global.empty_panel": {
    "offset": [0.4, 0],
    "controls": [
      {"1@global.empty_panel": {"ignored": "(not ($tab_view_binding_name = first_tab_toggle))" ,"controls": "$first_tab_icons" }},
      {"2@global.empty_panel": {"ignored": "(not ($tab_view_binding_name = second_tab_toggle))","controls": "$second_tab_icons"}},
      {"3@global.empty_panel": {"ignored": "(not ($tab_view_binding_name = third_tab_toggle))" ,"controls": "$third_tab_icons" }},
      {"4@global.empty_panel": {"ignored": "(not ($tab_view_binding_name = fourth_tab_toggle))","controls": "$fourth_tab_icons"}},
      {"5@global.empty_panel": {"ignored": "(not ($tab_view_binding_name = fourth_tab_toggle))","controls": "$fith_tab_icons"  }}
    ]
  },
  "survival_tab_holder@global.empty_panel": { "size": [24, 25], "controls": [{ "img@$tab_icon": {} }] },
  "survival_tab_base@toggle.toggle": {
    "$toggle_offset": [5, 3],
    "size": [35, 27],
    "$unchecked_offset": [5, 3],
    "$checked_offset": [3, 3],
    "$toggle_base_offset_unchecked": [5, 3],
    "$toggle_base_offset_checked": [3, 3],
    "$toggle_binding_type": "global",
    "$toggle_focus_enabled": true,
    "$is_left_tab": true,
    "$toggle_group_default_selected": 1,
    "$toggle_name": "furnace_tabs",
    "$tab_icon": "furnace_tabs.survival_tab_icon",
    "$toggle_state_binding_name": "#toggle_state",
    "$tab_content": "furnace_tabs.survival_tab_holder"
  },
  "first_tab@furnace_tabs.survival_tab_base": {
    "$toggle_default_state": true,
    "$tab_view_binding_name": "first_tab_toggle",
    "$toggle_group_forced_index": 1,
    "$toggle_state_binding_name": "#is_first_tab"
  },
  "second_tab@furnace_tabs.survival_tab_base": {
    "$tab_view_binding_name": "second_tab_toggle",
    "$toggle_group_forced_index": 2,
    "$toggle_state_binding_name": "#is_second_tab"
  },
  "third_tab@furnace_tabs.survival_tab_base": {
    "$tab_view_binding_name": "third_tab_toggle",
    "$toggle_group_forced_index": 3,
    "$toggle_state_binding_name": "#is_third_tab"
  },
  "fourth_tab@furnace_tabs.survival_tab_base": {
    "$tab_view_binding_name": "fourth_tab_toggle",
    "$toggle_group_forced_index": 4,
    "$toggle_state_binding_name": "#is_fourth_tab"
  },
  "fith_tab@furnace_tabs.survival_tab_base": {
    "$tab_view_binding_name": "fith_tab_toggle",
    "$toggle_group_forced_index": 5,
    "$toggle_state_binding_name": "#is_fith_tab"
  }
}
