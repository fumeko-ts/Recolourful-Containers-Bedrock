{
  "namespace": "stack_splitting_overlay",
  "stack_splitting_overlay@global.empty_panel": {
    "size": [128, 20],
    "layer": 900,
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [0, 10],
    "controls": [
      {
        "progressive_select_progress_bar_underlay@screen_content.image_element": {
          "layer": 1,
          "texture": "textures/stack_split_underlay",
          "max_size": [128, 17],
          "size": ["default", "default"]
        }
      },
      {
        "progressive_select_progress_bar@screen_content.image_element": {
          "layer": 2,
          "texture": "textures/stack_split_progress",
          "size": ["default", "default"],
          "max_size": [122, 17],
          "clip_direction": "left",
          "clip_pixelperfect": false,
          "bindings": [
            {
              "binding_name": "#progressive_select_bar_ratio",
              "binding_name_override": "#clip_ratio",
              "binding_condition": "always"
            }
          ]
        }
      },
      {
        "progressive_select_text@global.empty_label": {
          "text": "#progressive_select_text",
          "color": "white",// basicly the same as the colors in global variables
          "layer": 3,
          "bindings": [
            {
              "binding_name": "#progressive_select_text",
              "binding_condition": "always"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_condition": "always",
        "binding_name": "#progressive_select_text"
      },
      {
        "binding_type": "view",
        "binding_condition": "always",
        "source_property_name": "((('%.1s' * #progressive_select_text) * 1) > 0)",
        "target_property_name": "#visible"
      }
    ]
  }
}
