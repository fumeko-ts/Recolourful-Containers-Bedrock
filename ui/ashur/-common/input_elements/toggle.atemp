{
  "namespace": "toggle",
  "tab_texture_template@screen_content.image_element": {
    "size": ["default", "default"],
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": "#offset",
    "property_bag": {
      "#tab_texture_offset_0": "$tab_texture_unchecked_offset",
      "#tab_texture_offset_1": "$tab_texture_checked_offset"
    },
    "bindings": [
      {
        "binding_type": "view",
        "binding_condition": "always",
        "source_control_name": "$toggle_control_name",
        "source_property_name": "#toggle_state",
        "target_property_name": "#tab_selected"
      },
      {
        "binding_type": "view",
        "binding_condition": "always",
        "source_property_name": "('#tab_texture_offset_' + (#tab_selected * 1))",
        "target_property_name": "#offset"
      }
    ]
  },
  "tab_toggle@toggle.radio_toggle": {
    "$is_top_left_tab|default": false,
    "$is_top_right_tab|default": false,
    "$is_bottom_right_tab|default": false,
    "$is_left_tab|default": false,
    //tab sprite templates incase you want to nineslice or uv map seprate the tabs
    "$tab_texture_template_default|default": "toggle.tab_texture_template",
    "$tab_texture_template_default_hover|default": "toggle.tab_texture_template",
    "$tab_texture_template_checked|default": "toggle.tab_texture_template",
    "$tab_texture_template_checked_hover|default": "toggle.tab_texture_template",
    //tab_sprite offsets checked/unchecked no hover
    "$tab_texture_unchecked_offset|default": [0, 0],
    "$tab_texture_checked_offset|default": [0, 0],
    //tab texture layers (for when they need to be ontop and below a element)
    "$checked_hover_layer|default": 5,
    "$checked_layer|default": 5,
    "$default_hover_layer|default": 5,
    "$default_layer|default": 5,
    //icon offsets
    "$icon_unchecked_offset|default": [0, 0],
    "$icon_checked_offset|default": [0, 0],
    //textures
    "$unchecked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_2.png",
    "$unchecked_hover_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_top_unselected_2.png",
    "$checked_default_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_top_selected_2.png",
    "$checked_hover_image|default"    : "assets/sprite_assets/container/creative_inventory/tab_top_selected_2.png",
    //tab_controls
    "$controls": [
      { "default@$tab_texture_template_default"            : {"layer":"$default_layer"      , "texture": "$unchecked_default_image" } },// hover text wont be added because it cant be localised/translated
      { "default_hover@$tab_texture_template_default_hover": {"layer":"$default_hover_layer", "texture": "$unchecked_hover_image"   } },
      { "checked@$tab_texture_template_checked"            : {"layer":"$checked_layer"      , "texture": "$checked_default_image"   } },
      { "checked_hover@$tab_texture_template_checked_hover": {"layer":"$checked_hover_layer", "texture": "$checked_hover_image"     } },
      { "locked@global.empty_panel": {} },
      {
        "$extra_contents@$extra_contents": {
          "offset": "#offset",
          "property_bag": {
            "#icon_offset_0": "$icon_unchecked_offset",
            "#icon_offset_1": "$icon_checked_offset"
          },
          "bindings": [
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_control_name": "$toggle_control_name",
              "source_property_name": "#toggle_state",
              "target_property_name": "#tab_selected"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "('#icon_offset_' + (#tab_selected * 1))",//doing *1 is optional all that iy dose is convert a boolean to a int
              "target_property_name": "#offset"
            }
          ]
        }
      },
      {
        "debug@screen_content.debug_element": {}
      }
    ],
    "variables": [
      {
        "requires": "($is_top_left_tab = true)",
        "$unchecked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_1.png",
        "$unchecked_hover_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_top_unselected_1.png",
        "$checked_default_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_top_selected_1.png",
        "$checked_hover_image|default"    : "assets/sprite_assets/container/creative_inventory/tab_top_selected_1.png"
      },
      {
        "requires": "($is_top_right_tab = true)",
        "$unchecked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_top_unselected_7.png",
        "$unchecked_hover_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_top_unselected_7.png",
        "$checked_default_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_top_selected_7.png",
        "$checked_hover_image|default"    : "assets/sprite_assets/container/creative_inventory/tab_top_selected_7.png"
      },
      {
        "requires": "($is_bottom_right_tab = true)",
        "$unchecked_default_image|default": "assets/sprite_assets/container/creative_inventory/tab_bottom_unselected_7.png",
        "$unchecked_hover_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_bottom_unselected_7.png",
        "$checked_default_image|default"  : "assets/sprite_assets/container/creative_inventory/tab_bottom_selected_7.png",
        "$checked_hover_image|default"    : "assets/sprite_assets/container/creative_inventory/tab_bottom_selected_7.png"
      },
      {
        "requires": "($is_left_tab = true)",
        "$unchecked_default_image|default": "assets/sprites/recipe_book/tab.png",
        "$unchecked_hover_image|default"  : "assets/sprites/recipe_book/tab.png",
        "$checked_default_image|default"  : "assets/sprites/recipe_book/tab_selected.png",
        "$checked_hover_image|default"    : "assets/sprites/recipe_book/tab_selected.png"
      }
    ]
  },
  "radio_toggle@global.empty_panel": {
    "size": "$size",
    "$size": [18, 18], // by default 18 because most elements i use this for is 18x18
    "$is_radio_toggle|default": true,
    "$radio_collection_name|default": "none",
    "$is_default_active|default": false,
    "$toggle_group_forced_index|default": -1,
    "$radio_collection_condition|default": "always",
    "$button_mappings|default": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_ok",
        "mapping_type": "pressed"
      }
    ],
    "$bindings|default": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "$radio_collection_name",
        "binding_condition": "$radio_collection_condition"
      },
      {
        "binding_name": "#selectable_button_visibility",
        "binding_name_override": "#enabled",
        "binding_condition": "always",
        "ignored": "(not ($radio_collection_name = '#enchant_buttons'))",
        "binding_collection_name": "#enchant_buttons",
        "binding_type": "collection"
      },
      {
        "binding_type": "global",
        "binding_condition": "always",
        "binding_name": "$toggle_binding_value",
        "binding_name_override": "#toggle_state"
      }
    ],
    "$property_bag|default": { "#toggle_state": true },
    "$default_selected_index|default": 0,
    "$extra_contents|default": "global.empty_panel",
    "$button_volume|default": 1.0,
    "$unchecked|default": "global.empty_panel",
    "$unchecked_hover|default": "global.empty_panel",
    "$checked|default": "global.empty_panel",
    "$checked_hover|default": "global.empty_panel",
    "$locked|default": "global.empty_panel",
    "$controls|default": [
      { "default@$unchecked": {} },
      { "default_hover@$unchecked_hover": {} },
      { "checked@$checked": {} },
      { "checked_hover@$checked_hover": {} },
      { "locked@$locked": {} },
      {
        "$extra_contents@$extra_contents": {}
      },
      {
        "debug@screen_content.debug_element": {}
      }
    ],
    "controls": [
      {
        "$toggle_control_name": {
          "type": "toggle",
          "size": "$size",
          "focus_enabled": false,
          "focus_wrap_enabled": false,
          "focus_magnet_enabled": false,
          "$hover|default": false,
          "sound_name": "random.click",
          "sound_volume": "$button_volume",
          "sound_pitch": 1.0,
          "toggle_name": "$toggle_name",
          "unchecked_control": "default",
          "unchecked_hover_control": "default_hover",
          "checked_control": "checked",
          "checked_hover_control": "checked_hover",
          "checked_locked_control": "locked",
          "checked_locked_hover_control": "locked",
          "unchecked_locked_control": "locked",
          "unchecked_locked_hover_control": "locked",
          "radio_toggle_group": "$is_radio_toggle",
          "toggle_group_forced_index": "$toggle_group_forced_index",
          "toggle_group_default_selected": "$default_selected_index",
          "reset_on_focus_lost": true,
          "toggle_default_state": "$is_default_active",
          "property_bag": "$property_bag",
          "controls": "$controls",
          "bindings": "$bindings",
          "button_mappings": "$button_mappings"
        }
      }
    ]
  }
}
