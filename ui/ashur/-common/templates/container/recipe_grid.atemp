{
  "namespace": "recipe_grid",
  "recipe_grid": {
    "type": "grid",
    "size": [125, "default"],
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "collection_name": "recipe_book",
    "grid_rescaling_type": "horizontal",
    "grid_item_template": "recipe_grid.recipe_container_item",
    "bindings": [
        {
        "binding_name": "#recipe_book_total_items",
        "binding_name_override": "#maximum_grid_items",
        "binding_condition": "visible",
        "binding_type": "collection",
        "binding_collection_name": "recipe_book"
        }
      ]
    },
  "recipe_container_item": {
    "type": "input_panel",
    "size": [25, 25],
    "layer": 1,
    "$item_collection_name": "recipe_book",
    "$recipe_book": true,
    "controls": [
        {
        "item_group_bg@recipe_grid.slot_craftable": {
          "bindings": [
              {
              "binding_name": "(#container_item_background_texture = 'textures/ui/recipe_book_group_collapsed' or 'textures/ui/recipe_book_group_expanded' or 'textures/ui/recipe_book_group_bg')",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
              }
            ]
          }
        },
        {
        "default_item_bg@recipe_grid.slot_craftable": { "$texture_path": "('textures/ui/recipe_book_item_bg')" }
        },
        {
        "red_bg@recipe_grid.slot_uncraftable": { "$texture_path": "('textures/ui/recipe_book_red_button')" }
        },
        {
        "selected@recipe_grid.cell_image": {
          "$texture_path": "('textures/ui/recipe_book_touch_cell_selected')",
          "controls": [
              {
              "recipe_book_touch_cell_selected@recipe_grid.slot_craftable": {
                "property_bag": {
                  "#collection_name": "crafting_output_items",
                  "#collection_index": 0
                  },
                "bindings": [
                    {
                    "binding_name": "(not (#container_item_background = 3))",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "crafting_output_items",
                    "binding_condition": "always"
                    }
                  ]
                }
              },
              {
              "recipe_book_red_button@recipe_grid.slot_uncraftable": {
                "property_bag": {
                  "#collection_name": "crafting_output_items",
                  "#collection_index": 0
                  },
                "bindings": [
                    {
                    "binding_name": "(#container_item_background = 3)",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "crafting_output_items",
                    "binding_condition": "always"
                    }
                  ]
                }
              }
            ]
          }
        },
        {
        "item_renderer@common.item_renderer": {
          "size": [16, 16],
          "anchor_to": "center",
          "anchor_from": "center",
          "layer": 7
          }
        },
        {
        "container_overlay_images@global.empty_panel": {
          "layer": 9,
          "controls": [
              {
              "1@recipe_grid.item_overlay_image": {
                "texture": "textures/ui/recipe_book_expand_icon",
                "$overlay_index_group": 2
                }
              },
              {
              "2@recipe_grid.item_overlay_image": {
                "texture": "textures/ui/recipe_book_collapse_icon",
                "$overlay_index_group": 1
                }
              }
            ],
          "bindings": [
              {
              "binding_name": "#container_item_modifier",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name",
              "binding_condition": "visible"
              }
            ]
          }
        },
        {
        "container_slot_button@global.cell_button_prototype": {
          "sound_name": "random.click",
          "sound_volume": 0.0,
          "layer": 5,
          "button_mappings": [
              {
              "from_button_id": "button.menu_cancel",
              "to_button_id": "button.try_menu_exit",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.recipe_select",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.recipe_select",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.controller_back",
              "to_button_id": "button.recipe_select",
              "mapping_type": "pressed",
              "ignored": "(not $is_ps4)"
              },
              {
              "from_button_id": "button.menu_secondary_select",
              "to_button_id": "button.recipe_secondary",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.controller_select",
              "to_button_id": "button.recipe_secondary",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.menu_auto_place",
              "to_button_id": "button.recipe_tertiary",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.controller_secondary_select",
              "to_button_id": "button.recipe_tertiary",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.menu_inventory_drop",
              "to_button_id": "button.drop_one",
              "mapping_type": "pressed"
              },
              {
              "from_button_id": "button.menu_inventory_drop_all",
              "to_button_id": "button.drop_all",
              "mapping_type": "pressed"
              },
              {
              "to_button_id": "button.shape_drawing",
              "mapping_type": "pressed"
              },
              {
              "to_button_id": "button.container_slot_hovered",
              "mapping_type": "pressed"
              }
            ]
          }
        }
      ]
    },
  "item_overlay_image": {
    "type": "image",
    "size": [7, 7],
    "offset": [-1, -1],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "bindings": [
        {
        "binding_type": "view",
        "source_control_name": "container_overlay_images",
        "resolve_sibling_scope": true,
        "source_property_name": "(#container_item_modifier = $overlay_index_group)",
        "target_property_name": "#visible"
        }
      ]
    },
  "cell_image@global.empty_image": {
    "size": ["default", "default"],
    "layer": 1,
    "bindings": [
        {
        "binding_name": "(#container_item_background_texture = $texture_path)",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection_name"
        }
      ]
    },
  "slot_craftable@recipe_grid.cell_image": { "texture": "assets/minecraft/textures/gui/sprites/recipe_book/slot_craftable" },
  "slot_uncraftable@recipe_grid.cell_image": { "texture": "assets/minecraft/textures/gui/sprites/recipe_book/slot_uncraftable" }
  }