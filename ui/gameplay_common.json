// the bundles ui
{
  "namespace": "gameplay",
  "bundle_slot_panel@global.empty_panel": {
    // basicly the opend bundle icon in the open bundles slot
    "size": ["100%", "100%"],
    "layer": 1,
    "controls": [
      {
        "bundle_selected_item_panel@global.empty_panel": {
          "layer": 1,
          "controls": [
            {
              "bundle_selected_item_background@global.empty_panel": {
                "size": [18, 18],
                "layer": 10,
                "controls": [
                  {
                    "bundle_selected_item_background_colour_green@common.highlight_slot": {
                      "layer": 1,
                      "size": [16, 16],
                      "alpha": 1,
                      "bindings": [
                        {
                          "binding_name": "(not #using_touch)",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "bundle_selected_item_background_colour@global.empty_image": {
                      "texture": "textures/bundles/bundle_selected_slot",
                      "size": [18, 18],
                      "layer": 1,
                      "nineslice_size": 1,
                      "bindings": [
                        {
                          "binding_name": "#using_touch",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            { "bundle_open_icon_back@gameplay.bundle_open_icon_back": { "layer": 12 } },
            { "bundle_selected_item_icon@gameplay.bundle_selected_item_icon": { "layer": 13 } },
            { "bundle_open_icon_front@gameplay.bundle_open_icon_front": { "layer": 14 } },
            { "storage_bar@common.storage_bar": { "layer": 15 } }
          ],
          "bindings": [
            {
              "binding_name": "#bundle_selected_item_visible",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            }
          ]
        }
      }
    ]
  },

  "bundle_tooltip@bundle.bundle_tooltip": {}, //mobile tooltip aka touch tooltip

  "bundle_tooltip_factory_wrapper@global.empty_panel": {
    //pc tooltip
    "controls": [
      {
        "bundle_cursor_tooltip@global.custom_renderer": {
          "$type": "bundle_tooltip_renderer",
          "size": ["100%cm", "100%cm"],
          "layer": 20,
          "controls": [
            {
              "tooltip@bundle.bundle_tooltip": {
                "bindings": [
                  {
                    "binding_name": "#show_bundle_tooltip_hover",
                    "binding_name_override": "#visible",
                    "binding_condition": "always"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
