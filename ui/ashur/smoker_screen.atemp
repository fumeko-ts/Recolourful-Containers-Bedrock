{
  "namespace": "smoker_screen",
  "smoker_panel@global.empty_stack": {
    "orientation": "horizontal",
    "anchor_to": "center",
    "anchor_from": "center",
    "min_size": [176, 166],
    "max_size": [360, 166],
    "$is_smoker_screen|default": true,
    "controls": [
      {
        "main_smoker_contents@container_common.container_details": {
          "size": [176, 166],
          "$screen_controls": [
            {
              "smoker_inventory_side@global.empty_panel": {
                "size": [176, 166],
                "controls": [
                  { "common_panel@screen_content.container_base": {"$smoker_screen": "$is_smoker_screen"} },
                  {
                    "smoker_top_half@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [176, 70],
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "controls": [
                        {
                          "filler_1@global.empty_panel": { "size": ["fill", 6] }
                        },
                        {
                          "label_stack@global.empty_stack": {
                            "orientation": "horizontal",
                            "size": [176, 10],
                            "controls": [
                              {
                                "filler_1@global.empty_panel": { "size": [67, "fill"] }
                              },
                              {
                                "label_holder@global.empty_panel": { "size": [109, 10] }
                              }
                            ]
                          }
                        },
                        {
                          "main_content@global.empty_stack": {
                            "orientation": "horizontal",
                            "size": [176, 54],
                            "controls": [
                              {
                                "filler_1@global.empty_panel": { "size": [55, "fill"] }
                              },
                              {
                                "inputs@global.empty_stack": {
                                  "orientation": "vertical",
                                  "size": [18, 54],
                                  "controls": [
                                    {
                                      "smelt_input_item@global.container_item": {
                                        "$item_collection": "furnace_ingredient_items"
                                      }
                                    },
                                    {
                                      "flame_buffer_and_holder": {
                                        "type": "input_panel",
                                        "contained": true,
                                        "size": [18, 18],
                                        "controls": [
                                          {
                                            "flame_progress@smoker_screen.smoker_image_controls": {
                                              "size": [14, 14],
                                              "offset": [-1, 0],
                                              "anchor_to": "center",
                                              "anchor_from": "center",
                                              "$smoker_sprite": "lit_progress",
                                              "$source": "#furnace_flame_ratio",
                                              "$houkou": "down"
                                            }
                                          }
                                        ]
                                      }
                                    },
                                    {
                                      "fuel_input_item@global.container_item": {
                                        "$item_collection": "furnace_fuel_items"
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "filler_2@global.empty_panel": { "size": [6, "fill"] }
                              },
                              {
                                "arrow_holder@global.empty_stack": {
                                  "orientation": "vertical",
                                  "size": [24, 54],
                                  "controls": [
                                    {
                                      "filler_1@global.empty_panel": { "size": ["fill", 18] }
                                    },
                                    {
                                      "arrow_progress@smoker_screen.smoker_image_controls": {
                                        "size": [24, 16],
                                        "$smoker_sprite": "burn_progress",
                                        "$source": "#furnace_arrow_ratio",
                                        "$houkou": "left"
                                      }
                                    },
                                    {
                                      "filler_2@global.empty_panel": { "size": ["fill", 20] }
                                    }
                                  ]
                                }
                              },
                              {
                                "filler_3@global.empty_panel": { "size": [8, "fill"] }
                              },
                              {
                                "item_output_holder@global.empty_stack": {
                                  "orientation": "vertical",
                                  "size": [26, 54],
                                  "controls": [
                                    {
                                      "filler_1@global.empty_panel": { "size": ["fill", 14] }
                                    },
                                    {
                                      "cell_holder@global.empty_panel": {
                                        "size": [26, 26],
                                        "controls": [
                                          {
                                            "output_item@global.container_item": {
                                              "anchor_to"       : "center",
                                              "anchor_from"     : "center",
                                              "$item_collection": "furnace_output_items"
                                            }
                                          }
                                        ]
                                      }
                                    },
                                    {
                                      "filler_2@global.empty_panel": { "size": ["fill", 14] }
                                    }
                                  ]
                                }
                              },
                              {
                                "filler_4@global.empty_panel": { "size": [35, "fill"] }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "bottom@crafting_screen.inventory_bottom_half_with_label": {
                      "anchor_to"  : "bottom_middle",
                      "anchor_from": "bottom_middle"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "smoker_image_controls@global.empty_image": {
    "layer": 3,
    "texture": "$smoker_sprite_src",
    "$smoker_sprite_src": "('assets/minecraft/textures/gui/sprites/container/smoker/' + $smoker_sprite)",
    "clip_direction": "$houkou",
    "keep_ratio": true,
    "clip_pixelperfect": true,
    "$uv_size": [],
    "$uv": [0, 0],
    "clip_offset": [0, -1],
    "uv_size": "$uv_size",
    "uv": "$uv",
    "variables": {
      "requires": "($smoker_sprite = 'lit_progress')",
      "$uv_size": [14, 14],
      "$smoker_sprite_src": "textures/smoker_burn_lit",
      "$uv": "@smoker_screen.burn_lit"
    },
    "bindings": [ {"binding_name": "$source", "binding_name_override": "#clip_ratio", "binding_condition": "always"} ]
  },
  "burn_lit": {
		"anim_type": "aseprite_flip_book",
		"initial_uv": [0, 0]
	}
}
