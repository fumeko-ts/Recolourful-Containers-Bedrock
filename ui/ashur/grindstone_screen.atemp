{
  "namespace": "grindstone_screen",
  "grindstone_panel@container_common.container_details": {
    "size": [ 176, 166 ],
    "$screen_controls": [
      {
        "close@global.close_button": {
          "offset": [ 14, -4 ],
          "$pressed": "textures/ui/ashur/close_pressed",
          "$default": "textures/ui/ashur/close_default",
          "$hover": "textures/ui/ashur/close_hover"
        }
      },
      {"common_panel@screen_content.container_base": {"$grindstone_screen": true}},
      {
        "grindstone_top_stack@global.empty_stack": {
          "orientation": "vertical",
          "size": [ 176, 57 ],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "controls": [
            {"filler_1@global.empty_panel": {"size": [ "fill", 18 ]}},
            {
              "input_holder@global.empty_stack": {
                "orientation": "horizontal",
                "size": [ 176, 39 ],
                "controls": [
                  {"filler_1@global.empty_panel": {"size": [ 48, "fill" ]}},
                  {
                    "cells@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 39 ],
                      "controls": [
                        {"1@global.container_item": {"$item_collection": "grindstone_input_items"}},
                        {"filler_1@global.empty_panel": {"size": [ "fill", 3 ]}},
                        {"2@global.container_item": {"$item_collection": "grindstone_additional_items"}}
                      ]
                    }
                  },
                  {"filler_2@global.empty_panel": {"size": [ 62, "fill" ]}},
                  {
                    "output_holder@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 39 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 15 ]}},
                        {
                          "result_item_slot@global.container_item": {
                            "$item_collection": "grindstone_result_items",
                            "$button_ref": "button_mappings.grindstone_output_slot_button"
                          }
                        },
                        {"filler_2@global.empty_panel": {"size": [ "fill", 6 ]}}
                      ]
                    }
                  },
                  {"filler_3@global.empty_panel": {"size": [ 30, "fill" ]}}
                ]
              }
            }
          ]
        }
      },
      {
        "bottom@global.inventory_bottom_half": {"anchor_to": "bottom_middle", "anchor_from": "bottom_middle"}
      }
    ]
  }
}