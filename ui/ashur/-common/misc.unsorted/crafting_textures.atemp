{
  "namespace": "crafting_textures",
  "main_cell_panel@global.empty_panel": {
    "size": "$cell_size",
    "anchor_from": "center",
    "anchor_to": "center",
    "$cell_images_binding_condition|default": "visible",
    "controls": [
      {
        "red@global.empty_panel": {
          "size": "$cell_size",
          "controls": [
            {
              "white@global.empty_image": {
                "size": "$cell_size",
                "nineslice_size": 2,
                "texture": "textures/ui/ashur/cell_icons/cell_white_transparent.png",
                "alpha": 0.2,
                "layer": 12
              }
            },
            {
              "cell_image_red@screen_content.image_element": {
                "size": "$cell_size",
                "nineslice_size": 2,
                "texture": "textures/ui/ashur/cell_icons/cell_red_transparent.png",
                "layer": 3
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "(#container_item_background = 3)",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection",
              "binding_condition": "always"
            }
          ]
        }
      },
      {
        "console_selected@global.empty_panel": {
          "size": "$cell_size",
          "controls": [
            {
              "white@global.empty_image": {
                "size": "$cell_size",
                "nineslice_size": 2,
                "texture": "textures/ui/ashur/cell_icons/cell_white_transparent.png",
                "alpha": 0.2,
                "layer": 12
              }
            },
            {
              "cell_image_red@screen_content.image_element": {
                "size": "$cell_size",
                "nineslice_size": 2,
                "alpha": 0.4,
                "texture": "textures/ui/ashur/cell_icons/cell_focus_unselect.png",
                "layer": 3
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "(#container_item_background = 7)",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection",
              "binding_condition": "always"
            }
          ]
        }
      }
    ]
  },

  "crafting_input_grid_item@container_item.container_item": {
    "$item_collection": "crafting_input_items",
    "$background_images": "crafting_textures.main_cell_panel",
    "$item_renderer_binding_condition": "always",
    "$button_ref": "button_mappings.inventory_container_slot_button"
  },
  "output_cell_textures@crafting_textures.main_cell_panel": {"$cell_images_binding_condition": "always"}
}