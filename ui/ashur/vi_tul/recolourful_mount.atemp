{
  "namespace": "recolourful_mount",
  "mount@global.empty_panel": {
    "size": [176, 166],
    "layer": 1,
    "$screen|default": "global.empty_panel",
    "$screen_route|default": "$container_title",
    "$mount_1|default": "ui:entity.llama.name0",
    "$mount_2|default": "ui:entity.donkey.name0",
    "$mount_3|default": "ui:entity.mule.name0",
    "$mount_4|default": "ui:entity.horse.name0",
    "$mount_5|default": "ui:entity.camel.name0",
    "$mount_6|default": "ui:entity.trader_llama.name0",
    "$mount_7|default": "ui:entity.nautilus.name0",
    "$mount_8|default": "ui:entity.zombie_nautilus.name0",
    "$mount_9|default": "ui:entity.zombie_horse.name0",
    "controls": [
      {"illama@recolourful_mount.mount_screen_bindings"          :{"$screen":"illama_screen.illama_screen"                  ,"$screen_id":"ui:entity.llama.name0"          }},
      {"trader_illama@recolourful_mount.mount_screen_bindings"   :{"$screen":"trader_illama_screen.trader_illama_screen"    ,"$screen_id":"ui:entity.trader_llama.name0"   }},
      {"donkey@recolourful_mount.mount_screen_bindings"          :{"$screen":"donkey_screen.donkey_screen"                  ,"$screen_id":"ui:entity.donkey.name0"         }},
      {"mule@recolourful_mount.mount_screen_bindings"            :{"$screen":"mule_screen.mule_screen"                      ,"$screen_id":"ui:entity.mule.name0"           }},
      {"horse@recolourful_mount.mount_screen_bindings"           :{"$screen":"horse_screen.horse_screen"                    ,"$screen_id":"ui:entity.horse.name0"          }},
      {"camel@recolourful_mount.mount_screen_bindings"           :{"$screen":"camel_screen.camel_screen"                    ,"$screen_id":"ui:entity.camel.name0"          }},
      
      {"nautilus@recolourful_mount.mount_screen_bindings"        :{"$screen":"nautilus_screen.nautilus_screen"              ,"$screen_id":"ui:entity.nautilus.name0"       }},
      {"zombie_horse@recolourful_mount.mount_screen_bindings"    :{"$screen":"zombie_horse_screen.zombie_horse_screen"      ,"$screen_id":"ui:entity.zombie_horse.name0"   }},
      {"zombie_nautilus@recolourful_mount.mount_screen_bindings" :{"$screen":"zombie_nautilus_screen.zombie_nautilus_screen","$screen_id":"ui:entity.zombie_nautilus.name0"}},
      {
        "custom_rename@container_common.container_details": {
          "layer": 1,
          "size": [176, 166],
          "$screen_controls": [
            {
              "close@global.close_button": {
                "offset": [14, -4],
                "$pressed": "textures/ui/ashur/close_pressed",
                "$default": "textures/ui/ashur/close_default",
                "$hover": "textures/ui/ashur/close_hover"
              }
            },
            { "horse@mount_misc.horse_panel": {} }
          ],
          "bindings": [
            {
              "binding_name": "#item_id_aux",
              "binding_type": "collection",
              "binding_collection_name": "horse_equip_items"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "(('ui:' + $screen_route + (#item_id_aux - #item_id_aux))",
              "target_property_name": "#screen_binding"
            },
            {
              "binding_type": "view",
              "binding_condition": "always",
              "source_property_name": "(not ((#screen_binding = $mount_8) or (#screen_binding = $mount_9) or(#screen_binding = $mount_7) or (#screen_binding = $mount_1) or (#screen_binding = $mount_2) or (#screen_binding = $mount_3) or (#screen_binding = $mount_4) or (#screen_binding = $mount_5) or (#screen_binding = $mount_6)))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
  "mount_screen_bindings@container_common.container_details": {
    "size": [176, 166],
    "$screen_controls": [
      {
        "close@global.close_button": {
          "offset": [14, -4],
          "$pressed": "textures/ui/ashur/close_pressed",
          "$default": "textures/ui/ashur/close_default",
          "$hover": "textures/ui/ashur/close_hover"
        }
      },
      { "screen@$screen": {} }
    ],
    "anchor_to": "center",
    "anchor_from": "center",
    "bindings": [
      {
        "binding_name": "#item_id_aux",
        "binding_type": "collection",
        "binding_collection_name": "horse_equip_items"
      },
      {
        "binding_type": "view",
        "binding_condition": "always",
        "source_property_name": "(('ui:' + $screen_route + (#item_id_aux - #item_id_aux)) = $screen_id)",
        "target_property_name": "#visible"
      }
    ]
  }
}
