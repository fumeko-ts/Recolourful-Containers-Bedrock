{
  "namespace": "blast_furnace_screen",
  "blast_furnace_panel@global.empty_stack": {
    "orientation": "horizontal",
    "anchor_to": "center",
    "anchor_from": "center",
    "min_size": [176, 166],
    "max_size": [360, 166],
    "$is_blast_furnace_screen|default": true,
    "controls": [
      {
        "recipe_book@global.empty_stack": {
          "size": [184, 166],
          "orientation": "horizontal",
          "ignored": "(not $smelting_recipes)",
          "visible": false,
          "controls": [
            {
              "tab_stack@furnace_tabs.furnace_tabs": {
                "$second_tab_icons": [{ "1@furnace_tabs.tab_item_renderer": { "$item_id": 73 } }],
                "$third_tab_icons": [
                  { "1@furnace_tabs.tab_item_renderer": { "layer": 7, "offset": [5, 0], "$item_id": 378 } },
                  { "2@furnace_tabs.tab_item_renderer": { "layer": 6, "offset": [-6, 0], "$item_id": 320 } }
                ],
                "$3_tabs": true
              }
            },
            {
              "recipe_base@screen_content.recipe_book": {
                "controls": [{ "pages@blast_furnace_recipe_book.base_page_logic": { "offset": [-1, 0], "layer": 12 } }]
              }
            },
            { "filler@global.empty_panel": { "size": [2, 166] } }
          ],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "furnace_recipe_2",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "main_blast_furnace_contents@container_common.container_details": {
          "size": [176, 166],
          "$screen_controls": [
            {
              "layout_holder@global.empty_panel": {
                "size": [40, 52],
                "anchor_from": "top_left",
                "ignored": "(not $smelting_recipes)",
                "anchor_to": "top_left",
                "controls": [
                  {
                    "layout@smelting_common.layout_toggle": {
                      "anchor_from": "bottom_right",
                      "anchor_to": "bottom_right",
                      "layer": 10
                    }
                  }
                ]
              }
            },
            {
              "close@global.close_button": {
          "offset": [13, -2],
                "$pressed": "textures/ui/ashur/close_pressed",
                "$default": "textures/ui/ashur/close_default",
                "$hover": "textures/ui/ashur/close_hover"
              }
            },
            { "common_panel@screen_content.container_base": { "$blast_furnace_screen": true } },
            {
              "blast_furnace_top_half@global.empty_stack": {
                "orientation": "vertical",
                "size": [176, 70],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "controls": [
                  { "filler@global.empty_panel": { "size": [176, 16] } },
                  {
                    "main_content@global.empty_stack": {
                      "orientation": "horizontal",
                      "size": [176, 54],
                      "controls": [
                        { "filler_1@global.empty_panel": { "size": [55, "fill"] } },
                        {
                          "inputs@global.empty_stack": {
                            "orientation": "vertical",
                            "size": [18, 54],
                            "controls": [
                              {
                                "smelt_input_item@global.container_item": {
                                  "$item_collection": "furnace_ingredient_items"
                                }
                              },
                              {
                                "flame_holder@global.empty_panel": {
                                  "size": [18, 18],
                                  "controls": [{ "smelt_flame_progress@blast_furnace_screen.flame_progress": {} }]
                                }
                              },
                              { "fuel_input_item@global.container_item": { "$item_collection": "furnace_fuel_items" } }
                            ]
                          }
                        },
                        { "filler_2@global.empty_panel": { "size": [6, "fill"] } },
                        {
                          "arrow_holder@global.empty_stack": {
                            "orientation": "vertical",
                            "size": [24, 54],
                            "controls": [
                              { "filler_1@global.empty_panel": { "size": ["fill", 18] } },
                              { "arrow_progress@blast_furnace_screen.arrow_progress": {} },
                              { "filler_2@global.empty_panel": { "size": ["fill", 20] } }
                            ]
                          }
                        },
                        { "filler_3@global.empty_panel": { "size": [8, "fill"] } },
                        {
                          "item_output_holder@global.empty_stack": {
                            "orientation": "vertical",
                            "size": [26, 54],
                            "controls": [
                              { "filler_1@global.empty_panel": { "size": ["fill", 14] } },
                              {
                                "cell_holder@global.empty_panel": {
                                  "size": [26, 26],
                                  "controls": [
                                    {
                                      "output_item@global.container_item": {
                                        "anchor_to": "center",
                                        "anchor_from": "center",
                                        "$item_collection": "furnace_output_items"
                                      }
                                    }
                                  ]
                                }
                              },
                              { "filler_2@global.empty_panel": { "size": ["fill", 14] } }
                            ]
                          }
                        },
                        { "filler_4@global.empty_panel": { "size": [35, "fill"] } }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "bottom@global.inventory_bottom_half": { "anchor_to": "bottom_middle", "anchor_from": "bottom_middle" }
            }
          ]
        }
      }
    ]
  },
  "blast_furnace_image_controls@global.empty_image": {
    "layer": 3,
    "texture": "$blast_furnace_sprite_src",
    "$blast_furnace_sprite_src": "('assets/sprite_assets/container/blast_furnace/' + $blast_furnace_sprite)",
    "clip_direction": "$houkou",
    "keep_ratio": true,
    "clip_pixelperfect": true,
    "$uv_size": [],
    "clip_offset": [0, -1],
    "$uv": [0, 0],
    "uv_size": "$uv_size",
    "uv": "$uv",
    "variables": {
      "requires": "($blast_furnace_sprite = 'lit_progress')",
      "$uv_size": [14, 14],
      "$blast_furnace_sprite_src": "textures/ui/ashur/animations/blast_furnace_lit",
      "$uv": "@blast_furnace_screen.burn_lit"
    },
    "bindings": [{ "binding_name": "$source", "binding_name_override": "#clip_ratio", "binding_condition": "always" }]
  },
  "burn_lit": { "anim_type": "aseprite_flip_book", "initial_uv": [0, 0] },
  "arrow_progress@blast_furnace_screen.blast_furnace_image_controls": {
    "size": [24, 16],
    "$blast_furnace_sprite": "burn_progress",
    "$source": "#furnace_arrow_ratio",
    "$houkou": "left"
  },
  "flame_progress@blast_furnace_screen.blast_furnace_image_controls": {
    "size": [14, 14],
    "offset": [-1, 0],
    "anchor_to": "center",
    "anchor_from": "center",
    "$blast_furnace_sprite": "lit_progress",
    "$source": "#furnace_flame_ratio",
    "$houkou": "down"
  }
}
