            {
              "close@global.close_button": {
                "offset": [ 14, -4 ],
                "$pressed": "textures/ui/ashur/close_pressed",
                "$default": "textures/ui/ashur/close_default",
                "$hover": "textures/ui/ashur/close_hover"
              }
            },
            {"common_panel@screen_content.container_base": {"$smoker_screen": true}},
            {
              "smoker_top_half@global.empty_stack": {
                "orientation": "vertical",
                "size": [ 176, 70 ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "controls": [
                  {"filler_1@global.empty_panel": {"size": [ "fill", 16 ]}},
                  {
                    "main_content@global.empty_stack": {
                      "orientation": "horizontal",
