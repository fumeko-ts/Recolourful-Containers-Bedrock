{
  "namespace": "stonecutter_screen",
  "stonecutter_panel@container_common.container_details": {
    "size": [ 176, 166 ],
    "$screen_controls": [
      {
        "close@global.close_button": {
          "offset": [12, 0],
          "$pressed": "textures/ui/ashur/close_pressed",
          "$default": "textures/ui/ashur/close_default",
          "$hover": "textures/ui/ashur/close_hover"
        }
      },
      {
        "sawblade@screen_content.image_element": {
          "texture": "assets/advanced_sprites/animated/sawblade.png",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": [ 168, 67 ],
          "layer": 2,
          "uv_size": [ 168, 67 ],
          "uv": "@sawblade.sawblade_0",
          "disable_anim_fast_forward": true
        }
      },
      {"common_panel@screen_content.container_base": {"$stonecutter_screen": true}},
      {"scroll_panel@stonecutter_screen.scroll_grid": {}},
      {
        "stonecutter_top_half@global.empty_stack": {
          "orientation": "vertical",
          "size": [ 176, 69 ],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "controls": [
            {"filler_1@global.empty_panel": {"size": [ "fill", 15 ]}},
            {
              "container_main@global.empty_stack": {
                "orientation": "horizontal",
                "size": [ 176, 54 ],
                "controls": [
                  {"filler_1@global.empty_panel": {"size": [ 19, "fill" ]}},
                  {
                    "input@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 54 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 17 ]}},
                        {"input_item_slot@global.container_item": {"$item_collection": "stonecutter_input_items"}},
                        {"filler_1@global.empty_panel": {"size": [ "fill", 19 ]}}
                      ]
                    }
                  },
                  {"filler_3@global.empty_panel": {"size": [ 105, "fill" ]}},
                  {
                    "output_stack@global.empty_stack": {
                      "orientation": "vertical",
                      "size": [ 18, 54 ],
                      "controls": [
                        {"filler_1@global.empty_panel": {"size": [ "fill", 17 ]}},
                        {
                          "result_item_slot@global.container_item": {
                            "$item_collection": "stonecutter_result_items",
                            "$button_ref": "button_mappings.stonecutter_result_slot_button"
                          }
                        },
                        {"filler_1@global.empty_panel": {"size": [ "fill", 19 ]}}
                      ]
                    }
                  },
                  {"filler_4@global.empty_panel": {"size": [ 16, "fill" ]}}
                ]
              }
            }
          ]
        }
      },
      {
        "locked_scroll_holder@global.empty_panel": {
          "anchor_to": "top_right",
          "anchor_from": "top_right",
          "size": [ 57, 30 ],
          "controls": [
            {
              "locked_scroll_box@global.empty_panel": {
                "size": [ 12, 15 ],
                "anchor_to": "bottom_left",
                "anchor_from": "bottom_left",
                "controls": [
                  {
                    "locked_scroll_box@screen_content.image_element": {
                      "allow_clipping": true,
                      "texture": "assets/sprite_assets/container/stonecutter/scroller_disabled.png",
                      "size": [ 12, 15 ],
                      "alpha": 1,
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "layer": 5,
                      "bindings": [
                        {
                          "binding_name": "(#stone_selector_total_items < 13)",
                          "binding_name_override": "#visible",
                          "binding_type": "collection",
                          "binding_collection_name": "stones"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "bottom@global.inventory_bottom_half": {"anchor_to": "bottom_middle", "anchor_from": "bottom_middle"}
      }
    ]
  },
  "button_sprite_template@screen_content.image_element": {
    "size": [ 16, 18 ],
    "nineslice_size": 2,
    "keep_ratio": true,
    "texture": "$sprite",
    "layer": 4,
    "offset": [ 1, 1 ]
  },
  "stone_slot_button": {
    "type": "button",
    "size": [ 16, 18 ],
    "sound_name": "random.click",
    "sound_volume": 1.0,
    "sound_pitch": 1.0,
    "default_focus_precedence": 1,
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_back",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed",
        "ignored": "(not $is_ps4)"
      },
      {
        "from_button_id": "button.menu_secondary_select",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_select",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_auto_place",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_secondary_select",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_inventory_drop_all",
        "to_button_id": "button.stone_select",
        "mapping_type": "pressed"
      },
      {"to_button_id": "button.container_slot_hovered", "mapping_type": "pressed"}
    ],
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "stones",
        "binding_condition": "always"
      }
    ],
    "hover_control": "hover",
    "controls": [
      {
        "hover@global.empty_panel": {
          "size": [ 16, 18 ],
          "controls": [
            {
              "hover@screen_content.image_element": {
                "size": [ 16, 18 ],
                "offset": [ 1, 1 ],
                "layer": 3,
                "nineslice_size": 1,
                "texture": "assets/sprite_assets/container/stonecutter/recipe_highlighted.png",
                "bindings": [
                  {
                    "binding_type": "collection",
                    "binding_condition": "always",
                    "binding_collection_name": "stones",
                    "binding_name": "(#stone_cell_background_texture = 'textures/ui/cell_image_normal')",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "default@screen_content.image_element": {
          "size": [ 16, 18 ],
          "nineslice_size": 1,
          "offset": [ 1, 1 ],
          "texture": "assets/sprite_assets/container/stonecutter/recipe.png",
          "bindings": [
            {
              "binding_type": "collection",
              "binding_condition": "always",
              "binding_collection_name": "stones",
              "binding_name": "(#stone_cell_background_texture = 'textures/ui/cell_image_normal')",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "selected@screen_content.image_element": {
          "size": [ 16, 18 ],
          "nineslice_size": 1,
          "offset": [ 1, 1 ],
          "layer": 4,
          "texture": "assets/sprite_assets/container/stonecutter/recipe_selected.png",
          "bindings": [
            {
              "binding_type": "collection",
              "binding_condition": "always",
              "binding_collection_name": "stones",
              "binding_name": "(#stone_cell_background_texture = 'textures/ui/cell_image_invert')",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "item_renderer@common.item_renderer": {
          "size": [ 15, 15 ],
          "anchor_to": "center",
          "anchor_from": "center",
          "offset": [ 1.2, 1.2 ],
          "layer": 6,
          "bindings": [
            {
              "binding_name": "#item_id_aux",
              "binding_condition": "visible",
              "binding_type": "collection",
              "binding_collection_name": "stones"
            }
          ]
        }
      }
    ]
  },
  "scroll_grid@scroll_panel.scroll_panel": {
    "$scroll_size": [ 12, 56 ],
    "size": [ 80, 56 ],
    "offset": [ 3, -39.6 ],
    "$scroll_view_port_size": [ 79, 54.2 ],
    "$scrolling_pane_size": [ "100%", "100%" ],
    "$scroll_track_offset": [ 32.2, -1 ],
    "anchor_to": "center",
    "anchor_from": "center",
    "$scroll_box_image_control": "stonecutter_screen.scroller",
    "$scrolling_content": "stonecutter_screen.grid_holder"
  },
  "scroller@screen_content.image_element": {
    "tiled": true,
    "nineslice_size": [ 6, 6, 6, 7 ],
    "tiled_scale": [ 1, 1 ],
    "offset": [ 2, 0.8 ],
    "anchor_to": "center",
    "anchor_from": "center",
    "texture": "assets/sprite_assets/container/stonecutter/scroller.png",
    "size": [ 12, "100%" ]
  },
  "grid_holder@global.empty_panel": {
    "size": [ 64, "100%cm" ],
    "anchor_to": "center",
    "anchor_from": "center",
    "offset": [ 0, -1.4 ],
    "controls": [
      {"scroll_buffer@global.empty_panel": {"size": [ 64, "100%sm" ]}},
      {
        "grid": {
          "type": "grid",
          "size": [ 64, "default" ],
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "collection_name": "stones",
          "grid_rescaling_type": "horizontal",
          "grid_item_template": "stonecutter_screen.stone_slot_button",
          "bindings": [
            {
              "binding_name": "#stone_selector_total_items",
              "binding_name_override": "#maximum_grid_items",
              "binding_condition": "visible",
              "binding_type": "collection",
              "binding_collection_name": "stones"
            }
          ]
        }
      }
    ]
  }
}